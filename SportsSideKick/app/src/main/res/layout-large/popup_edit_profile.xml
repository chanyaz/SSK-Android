<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_500"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_bottom_background"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/edit_profile_top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/popup_manage_chat_private_confirm_button_height"
            android:layout_height="@dimen/popup_manage_chat_private_confirm_button_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_10"
            android:src="?videoCloseButtonIcon" />

        <TextView
            android:id="@+id/caption"
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_button_height"
            android:gravity="center"
            android:text="@string/edit_profile"
            android:textColor="?colorAccent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2"
            android:layout_alignParentTop="true"
            android:background="?colorAccent" />

    </RelativeLayout>

    <View
        android:id="@+id/top_split_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:layout_below="@id/edit_profile_top_container"
        android:background="@android:color/black" />


    <RelativeLayout
        android:id="@+id/edit_profile_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_split_line">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_40">

            <TextView
                android:id="@+id/edit_photo_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/profileImage"
                android:layout_alignStart="@+id/profileImage"
                android:gravity="center_horizontal"
                android:text="@string/edit_photo"
                android:textColor="?white_semitransparent" />

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="@dimen/width_80"
                android:layout_height="@dimen/height_80"
                android:layout_below="@id/edit_photo_caption"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_marginEnd="@dimen/coin_lateral_margin"
                android:layout_marginTop="@dimen/margin_8"
                android:src="?profileImageIcon" />

            <Button
                android:id="@+id/camera_button"
                android:layout_width="@dimen/standard_button_height"
                android:layout_height="@dimen/standard_button_height"
                android:layout_below="@id/profileImage"
                android:layout_toStartOf="@+id/center_of_profile_image"
                android:background="@drawable/button_camera" />

            <View
                android:id="@+id/center_of_profile_image"
                android:layout_width="@dimen/space_0"
                android:layout_height="@dimen/space_0"
                android:layout_centerInParent="true" />

            <Button
                android:id="@+id/picture_button"
                android:layout_width="@dimen/standard_button_height"
                android:layout_height="@dimen/standard_button_height"
                android:layout_below="@id/profileImage"
                android:layout_toEndOf="@+id/center_of_profile_image"
                android:background="@drawable/button_image" />
        </RelativeLayout>

        <View
            android:id="@+id/center"
            android:layout_width="@dimen/space_0"
            android:layout_height="@dimen/space_0"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/first_name_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_toStartOf="@+id/center"
            android:text="@string/first_name"
            android:textColor="?white_semitransparent" />

        <TextView
            android:id="@+id/last_name_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_name_caption"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_toStartOf="@+id/center"
            android:text="@string/last_name"
            android:textColor="?white_semitransparent" />

        <TextView
            android:id="@+id/nickname_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/last_name_caption"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_toStartOf="@+id/center"
            android:text="@string/nickname"
            android:textColor="?white_semitransparent" />

        <TextView
            android:id="@+id/email_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nickname_caption"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_toStartOf="@+id/center"
            android:text="@string/email"
            android:textColor="?white_semitransparent" />

        <TextView
            android:id="@+id/telephone_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_caption"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_toStartOf="@+id/center"
            android:text="@string/phone"
            android:textColor="?white_semitransparent" />

        <AutoCompleteTextView
            android:id="@+id/first_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/first_name_caption"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toEndOf="@+id/center"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:labelFor="@+id/first_name_caption"
            android:lines="1"
            android:maxLines="1"
            android:nextFocusDown="@+id/last_name_edit_text"
            android:nextFocusForward="@+id/last_name_edit_text"
            android:textColor="?editUserInfoTextColorColorRef"
            android:textSize="@dimen/font_size_12" />


        <AutoCompleteTextView
            android:id="@+id/last_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/last_name_caption"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toEndOf="@+id/center"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:labelFor="@+id/last_name_caption"
            android:lines="1"
            android:maxLines="1"
            android:nextFocusDown="@+id/nickname_edit_text"
            android:nextFocusForward="@+id/nickname_edit_text"
            android:textColor="?editUserInfoTextColorColorRef"
            android:textSize="@dimen/font_size_12" />

        <AutoCompleteTextView
            android:id="@+id/nickname_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nickname_caption"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toEndOf="@+id/center"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:labelFor="@+id/nickname_caption"
            android:lines="1"
            android:maxLines="1"
            android:nextFocusDown="@+id/email_edit_text"
            android:nextFocusForward="@+id/email_edit_text"
            android:textColor="?editUserInfoTextColorColorRef"
            android:textSize="@dimen/font_size_12" />

        <AutoCompleteTextView
            android:id="@+id/email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/email_caption"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toEndOf="@+id/center"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:labelFor="@+id/email_caption"
            android:lines="1"
            android:maxLines="1"
            android:nextFocusDown="@+id/telephone_edit_text"
            android:nextFocusForward="@+id/telephone_edit_text"
            android:textColor="?editUserInfoTextColorColorRef"
            android:textSize="@dimen/font_size_12" />

        <AutoCompleteTextView
            android:id="@+id/telephone_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/telephone_caption"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toEndOf="@+id/center"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:labelFor="@+id/telephone_caption"
            android:lines="1"
            android:maxLines="1"
            android:nextFocusForward="@+id/confirm_button"
            android:textColor="?editUserInfoTextColorColorRef"
            android:textSize="@dimen/font_size_12" />

    </RelativeLayout>
    <!-- BOTTOM BUTTONS CONTAINER -->
    <RelativeLayout
        android:id="@+id/bottom_buttons_container"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/popup_language_bottom_buttons_container_height"
        android:layout_below="@id/edit_profile_content_container"
        android:background="@drawable/popup_bottom_background"
        android:clickable="true">

        <View
            android:id="@+id/bottom_split_line"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/wall_notifications"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_30"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/margin_20"
            android:paddingEnd="@dimen/margin_20"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_marginStart="@dimen/margin_20"
            android:textSize="@dimen/font_size_12"
            android:background="?textViewRoundBorderShape"
            android:gravity="center"
            android:padding="@dimen/half_margin"
            android:text="@string/notify_wall"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_30"
            android:layout_marginEnd="@dimen/margin_10"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="?popupConfirmationButtonIcon" />
    </RelativeLayout>
</RelativeLayout>