<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/phone_background" />


    <ImageView
        android:id="@+id/image_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:scaleType="centerCrop"
        android:src="@drawable/video_chat_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_buttons_container">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="@dimen/margin_20"
                    android:paddingBottom="@dimen/margin_20"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_logo"
                        android:layout_width="@dimen/height_80"
                        android:layout_height="@dimen/height_80"
                        android:layout_gravity="center"

                        android:src="@drawable/club_logo" />


                    <TextView
                        android:id="@+id/title_text"
                        style="@style/shadow_text_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_30"
                        android:text="@string/slogan"
                        android:textAlignment="center"
                        android:textColor="?white" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.33" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.34"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/forgot_password_container"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_marginTop="48dp"
                                android:clickable="true"
                                android:visibility="gone">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="@dimen/margin_40"
                                    android:clickable="true"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:orientation="vertical"
                                        android:weightSum="1">

                                        <ImageView
                                            android:id="@+id/forgot_password_back"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.33"
                                            android:padding="@dimen/margin_10"
                                            android:src="@drawable/ic_arrow_back" />

                                        <EditText
                                            android:id="@+id/login_forgot_pass_email"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/standard_button_height"
                                            android:layout_weight="0.33"
                                            android:background="@drawable/text_login_selector"
                                            android:hint="@string/email"
                                            android:inputType="textEmailAddress"
                                            android:nextFocusDown="@+id/login_password"
                                            android:padding="@dimen/padding_8"
                                            android:textAlignment="center"
                                            android:textColor="?white"
                                            android:textColorHint="?white" />

                                    </LinearLayout>
                                </RelativeLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/content_container"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_30"
                                android:visibility="visible">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/login_email"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/standard_button_height"
                                        android:background="@drawable/text_login_selector"
                                        android:hint="@string/email"
                                        android:inputType="textEmailAddress"
                                        android:nextFocusDown="@+id/login_password"
                                        android:padding="@dimen/padding_8"
                                        android:textAlignment="center"
                                        android:textColor="?white"
                                        android:textColorHint="?white" />

                                    <EditText
                                        android:id="@+id/login_password"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/standard_button_height"
                                        android:layout_marginTop="@dimen/margin_10"
                                        android:background="@drawable/text_login_selector"
                                        android:hint="@string/password"
                                        android:inputType="textPassword"
                                        android:padding="@dimen/padding_8"
                                        android:textAlignment="center"
                                        android:textColor="?white"
                                        android:textColorHint="?white" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="@dimen/margin_16"
                                        android:layout_marginTop="@dimen/margin_16"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <com.facebook.login.widget.LoginButton
                                            android:id="@+id/loginButton2"
                                            style="@style/facebook_login_button_phone"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="@string/join_with_facebook"
                                            android:visibility="gone" />

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="@dimen/height_1"
                                            android:layout_weight="10"
                                            android:background="@color/transparent" />

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="@dimen/height_1"
                                            android:layout_weight="5"
                                            android:background="?white" />

                                        <TextView
                                            android:id="@+id/or_label"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="5"
                                            android:gravity="center"
                                            android:text="@string/or"
                                            android:textAllCaps="true"
                                            android:textColor="@color/white" />

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="@dimen/height_1"
                                            android:layout_weight="5"
                                            android:background="?white" />

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="@dimen/height_1"
                                            android:layout_weight="10"
                                            android:background="@color/transparent" />
                                    </LinearLayout>

                                    <Button
                                        android:id="@+id/facebook_button"
                                        style="@style/facebook_login_button_phone"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/sign_in_with_facebook"
                                        android:textAllCaps="false"
                                        android:textColor="?white"
                                        android:textSize="@dimen/font_size_16" />

                                    <com.facebook.login.widget.LoginButton
                                        android:id="@+id/sign_up_facebook"
                                        style="@style/facebook_login_button_phone"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/join_with_facebook"
                                        android:visibility="gone" />
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/standard_button_height"
                                android:layout_marginTop="@dimen/margin_10">

                                <RelativeLayout
                                    android:id="@+id/bottom_buttons_container_login"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/button_login_login"
                                    android:clickable="true"
                                    android:visibility="visible">

                                    <TextView
                                        android:id="@+id/login_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="@string/sign_in"
                                        android:textColor="@android:color/black"
                                        android:textSize="@dimen/font_size_18" />

                                    <com.wang.avi.AVLoadingIndicatorView
                                        android:id="@+id/login_progress_bar"
                                        android:layout_width="@dimen/prodgres_bar"
                                        android:layout_height="@dimen/prodgres_bar"
                                        android:layout_centerInParent="true"
                                        android:elevation="@dimen/elevation_2"
                                        android:visibility="gone"
                                        app:indicatorName="LineSpinFadeLoaderIndicator" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/bottom_buttons_container_reset"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:background="@drawable/button_login_login"
                                    android:clickable="true"
                                    android:visibility="invisible">

                                    <TextView
                                        android:id="@+id/reset_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="@string/reset"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/font_size_18"
                                        android:visibility="visible" />

                                    <com.wang.avi.AVLoadingIndicatorView
                                        android:id="@+id/reset_progress_bar"
                                        android:layout_width="@dimen/prodgres_bar"
                                        android:layout_height="@dimen/prodgres_bar"
                                        android:layout_centerInParent="true"
                                        android:elevation="@dimen/elevation_2"
                                        android:visibility="gone"
                                        app:indicatorName="LineSpinFadeLoaderIndicator" />

                                </RelativeLayout>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/forgot_button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="@dimen/padding_8"
                                android:text="@string/forgot_your_password"
                                android:textAlignment="center"
                                android:textColor="?white" />
                        </LinearLayout>


                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.33" />
                    </LinearLayout>


                    <ImageView

                        android:id="@+id/logo_fq_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_40"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_40"
                        android:src="@drawable/logo_fq" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:background="@color/colorPrimarySlightlyLight" />

        <TextView
            style="@style/boldText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginEnd="1dp"
            android:gravity="center_vertical"
            android:text="@string/join_now_sign_in"
            android:textAllCaps="true"
            android:textColor="?white"
            android:textSize="@dimen/font_size_16" />

        <ImageButton
            android:id="@+id/close_dialog_button"
            android:layout_width="@dimen/standard_button_height"
            android:layout_height="@dimen/standard_button_height"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:tint="@color/colorPrimaryVeryLight"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>
