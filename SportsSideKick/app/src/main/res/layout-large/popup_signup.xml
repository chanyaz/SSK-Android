<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryMediumLight"
    android:clickable="true"
    android:fitsSystemWindows="false"
    android:isScrollContainer="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fitsSystemWindows="false"
        android:isScrollContainer="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/phone_background"
            android:fitsSystemWindows="false" />


        <ImageView
            android:id="@+id/image_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:fitsSystemWindows="false"
            android:scaleType="centerCrop"
            android:src="@drawable/video_chat_background" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_split_line"
        android:layout_centerInParent="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_20"
                    android:paddingTop="@dimen/margin_20">

                    <Button
                        android:id="@+id/facebook_button"
                        style="@style/facebook_login_button_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="@dimen/padding_8"
                        android:paddingTop="@dimen/padding_8"
                        android:text="@string/login_facebook"
                        android:textAllCaps="false"
                        android:textColor="?white"
                        android:textSize="@dimen/font_size_16" />

                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/sign_up_facebook"
                        style="@style/facebook_login_button_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/login_facebook"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/popupSignupContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/facebook_button"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_15"
                        android:gravity="center">

                        <View
                            android:id="@+id/horizontal_divider"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_centerHorizontal="true"
                            android:padding="@dimen/padding_8" />

                        <EditText
                            android:id="@+id/sign_up_firstname"
                            style="@style/edit_text_login_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/horizontal_divider"
                            android:hint="@string/first_name"
                            android:inputType="text"
                            android:textSize="@dimen/font_size_15" />

                        <EditText
                            android:id="@+id/sign_up_lastname"
                            style="@style/edit_text_login_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/horizontal_divider"
                            android:hint="@string/last_name"
                            android:inputType="text"
                            android:textSize="@dimen/font_size_15" />

                        <EditText
                            android:id="@+id/sign_up_display_name"
                            style="@style/edit_text_login_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/nickname"
                            android:layout_below="@+id/sign_up_firstname"
                            android:layout_toStartOf="@+id/horizontal_divider"
                            android:inputType="text"
                            android:textSize="@dimen/font_size_15"/>

                        <EditText
                            android:id="@+id/sign_up_phone"
                            style="@style/edit_text_login_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/sign_up_firstname"
                            android:layout_toEndOf="@+id/horizontal_divider"
                            android:hint="@string/phone"
                            android:inputType="phone"
                            android:textSize="@dimen/font_size_15"/>

                        <EditText
                            android:id="@+id/sign_up_email"
                            style="@style/edit_text_login_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/sign_up_display_name"
                            android:layout_toStartOf="@+id/horizontal_divider"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:textSize="@dimen/font_size_15" />


                        <EditText
                            android:id="@+id/sign_up_password"
                            style="@style/edit_text_login_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/sign_up_display_name"
                            android:layout_toEndOf="@+id/horizontal_divider"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:textSize="@dimen/font_size_15" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/popupSignupJoinNowButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/popupSignupContainer"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_15"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/bottom_buttons_container_sign_up"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/standard_button_height"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/button_login_login">

                            <TextView
                                android:id="@+id/sign_up_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/join"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/font_size_18" />

                            <com.wang.avi.AVLoadingIndicatorView
                                android:id="@+id/sign_up_progress_bar"
                                android:layout_width="@dimen/prodgres_bar"
                                android:layout_height="@dimen/prodgres_bar"
                                android:layout_centerInParent="true"
                                android:elevation="@dimen/elevation_2"
                                android:visibility="gone"
                                app:indicatorName="LineSpinFadeLoaderIndicator" />

                        </RelativeLayout>

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/politic_and_privacy_android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/popupSignupJoinNowButton"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_10"
                        android:text="@string/sign_up_text"
                        android:textAlignment="center"
                        android:textColor="?white_semitransparent"
                        android:textSize="@dimen/font_size_10" />
                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <View
        android:id="@+id/top_split_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:layout_below="@+id/top_buttons_container"
        android:background="@color/colorPrimary" />

    <RelativeLayout
        android:id="@+id/top_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:background="@color/colorPrimarySlightlyLight" />

        <TextView
            style="@style/boldText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginEnd="1dp"
            android:gravity="center_vertical"
            android:text="@string/join_sign_in"
            android:textAllCaps="true"
            android:textColor="?white"
            android:textSize="@dimen/font_size_16"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/backButton"
            android:layout_width="@dimen/standard_button_height"
            android:layout_height="@dimen/standard_button_height"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:tint="@color/colorPrimaryVeryLight"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/web_view_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary"
        android:visibility="invisible"
        >


        <WebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_buttons_container_veb_view"
            android:background="@color/colorPrimary"
            android:visibility="visible"/>


        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/progress_bar_veb_view"
            android:layout_width="@dimen/prodgres_bar"
            android:layout_height="@dimen/prodgres_bar"
            android:layout_centerInParent="true"
            android:elevation="@dimen/elevation_2"
            android:visibility="visible"
            app:indicatorName="LineSpinFadeLoaderIndicator"/>

    </RelativeLayout>

</RelativeLayout>
