<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_join_chat_search_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/row_chat_expanded_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true" />


    <TextView
        android:id="@+id/row_chat_expanded_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/row_chat_expanded_item_image"
        android:layout_alignStart="@id/row_chat_expanded_item_image"
        android:layout_below="@id/row_chat_expanded_item_image"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:paddingBottom="@dimen/padding_8"
        android:paddingTop="@dimen/padding_8"
        android:textColor="@color/white" />

</RelativeLayout>