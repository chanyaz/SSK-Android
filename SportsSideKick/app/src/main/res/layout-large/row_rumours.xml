<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryMediumLight">

    <TextView
        android:id="@+id/row_rumors_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Rumours description"
        android:textColor="?rumourSmallContentColor"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/row_rumors_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_rumors_description"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_5"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="row_rumors_time"
        android:textColor="?colorGray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2"
        android:background="?rumourSmallSeparatorColor" />

</RelativeLayout>