<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_60"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_head_image_view"
        android:layout_width="@dimen/width_60"
        android:layout_height="@dimen/height_60"
        android:layout_alignParentTop="true"
        android:padding="@dimen/padding_8"
        android:scaleType="centerCrop"
        app:civ_border_width="@dimen/image_border_width_2"/>

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="@dimen/width_15"
        android:layout_height="@dimen/height_15"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/margin_5"
        android:src="?chatNotificationIcon"
        android:visibility="gone" />

</RelativeLayout>