<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_bottom_background_dark"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_caption"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height"
        android:layout_marginEnd="@dimen/margin_80"
        android:layout_marginStart="@dimen/margin_80"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_caption"
        android:layout_marginEnd="@dimen/margin_40"
        android:layout_marginStart="@dimen/margin_40"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_20"
        android:gravity="center_horizontal"
        android:textColor="@color/white" />


    <!-- BOTTOM BUTTONS CONTAINER -->
    <LinearLayout
        android:id="@+id/dialog_button_container"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/dialog_content"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/dialog_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_20"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/popup_cancel_button"
            android:visibility="gone"/>

        <View
            android:id="@+id/dialog_button_divider"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin_10"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/dialog_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_20"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/popup_confirmation_button" />
    </LinearLayout>
</RelativeLayout>