<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_semitransparent"
    tools:context="tv.sportssidekick.sportssidekick.fragment.instance.ChatFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/chat_background" />

    <TextView
        android:id="@+id/info_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/no_message_text"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <RelativeLayout
        android:id="@+id/outer_chats_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/input_container"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/chats_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chat_container_height"
            android:layout_alignParentTop="true"
            android:background="@color/green_dark_1">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/chat_heads_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:scrollbars="none" />
        </RelativeLayout>
    </RelativeLayout>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/input_container"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_60">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/message_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.SwipeRefreshLayout>



    <ImageView
        android:id="@+id/down_arrow"
        android:layout_width="@dimen/chat_down_arrow_width"
        android:layout_height="@dimen/chat_down_arrow_height"
        android:layout_alignTop="@+id/swipe_refresh_layout"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/padding_40"
        android:src="@drawable/down_arrow" />



    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/prodgres_bar"
        android:layout_height="@dimen/prodgres_bar"
        android:layout_centerInParent="true"
        android:elevation="2dp"
        android:visibility="gone"
        app:indicatorName="LineSpinFadeLoaderIndicator" />

    <RelativeLayout
        android:id="@+id/full_screen_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_fullscreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/green_dark_2_semitransparent"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/close_image_button"
            android:layout_width="@dimen/chat_button_size"
            android:layout_height="@dimen/chat_button_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/video_close_button" />

        <ImageView
            android:id="@+id/download_image_button"
            android:layout_width="@dimen/chat_button_size"
            android:layout_height="@dimen/chat_button_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/download_button" />
    </RelativeLayout>


    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/input_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/green_dark_1">

        <Button
            android:id="@+id/mic_button"
            android:layout_width="@dimen/chat_button_message_size"
            android:layout_height="@dimen/chat_button_message_size"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_voice" />

        <Button
            android:id="@+id/cam_button"
            android:layout_width="@dimen/chat_button_message_size"
            android:layout_height="@dimen/chat_button_message_size"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/mic_button"
            android:background="@drawable/button_camera" />

        <Button
            android:id="@+id/pic_button"
            android:layout_width="@dimen/chat_button_message_size"
            android:layout_height="@dimen/chat_button_message_size"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/cam_button"
            android:background="@drawable/button_image" />

        <Button
            android:id="@+id/vid_button"
            android:layout_width="@dimen/chat_button_message_size"
            android:layout_height="@dimen/chat_button_message_size"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/pic_button"
            android:background="@drawable/button_image" />

        <EditText
            android:id="@+id/input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/vid_button"
            android:layout_toStartOf="@+id/messenger_send_button"
            android:background="@color/green_dark_2"
            android:gravity="start|center_vertical"
            android:hint="Enter your message here."
            android:imeOptions="flagNoExtractUi"
            android:maxLines="5"
            android:padding="@dimen/padding_8"
            android:textColor="@color/white"
            android:textColorHint="@color/white_semitransparent"
            android:textSize="10sp" />

        <Button
            android:id="@+id/messenger_send_button"
            android:layout_width="@dimen/chat_send_button_size"
            android:layout_height="@dimen/chat_send_button_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_8"
            android:background="@drawable/btn_send" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_create_chat_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height"
        android:layout_alignParentBottom="true"
        android:animateLayoutChanges="true"
        android:background="@color/green_dark_2"
        android:visibility="gone">

        <ImageView
            android:id="@+id/create_new_chat_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/chat_create_chat_button_height"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_10"
            android:src="@drawable/create_chat_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/create_new_chat_icon"
            android:text="Create or join chat"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>
