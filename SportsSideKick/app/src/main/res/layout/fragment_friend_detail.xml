<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <!--Status bar background-->
    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@drawable/gradient_black_to_transparent"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/caption"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="@string/user_profile"
        android:paddingTop="24dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:tileMode="repeat"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_marginTop="0dp" />

    <ImageButton
        android:id="@+id/backButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/standard_button_height"
        android:layout_height="@dimen/standard_button_height"
        android:adjustViewBounds="true"
        android:alpha="0.7"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/top_split_line" />

    <View
        android:id="@+id/top_split_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#17000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/caption"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="?videoCloseButtonIcon"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <!-- PROFILE CONTAINER - IMAGE -->
    <View
        android:id="@+id/top_split_profile_image"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#17000000"
        app:layout_constraintLeft_toLeftOf="@id/profile_container"
        app:layout_constraintRight_toRightOf="@id/profile_container"
        app:layout_constraintTop_toBottomOf="@id/profile_container"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="230dp" />

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/profile_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_split_line">

        <!-- VIEW IN MIDDLE TO SPLIT EASIER -->
        <View
            android:id="@+id/center_split_line"
            android:layout_width="@dimen/width_1"
            android:layout_height="@dimen/height_1"
            android:layout_centerHorizontal="true" />

        <!-- PROFILE CONTAINER - IMAGE -->
        <RelativeLayout
            android:id="@+id/imageInfoContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_centerInParent="true"
            android:elevation="2dp">

            <RelativeLayout
                android:id="@+id/profile_image_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/popup_friend_profil_progress_bar_size"
                    android:layout_height="@dimen/popup_friend_profil_progress_bar_size"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/circle_shape"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="60"
                    android:progressDrawable="@drawable/circular_progress_bar" />

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="@dimen/popup_friend_profil_profile_image_size"
                    android:layout_height="@dimen/popup_friend_profil_profile_image_size"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:foreground="?selectableItemBackground"
                    android:scaleType="fitXY"
                    tools:src="?profileImageIcon" />

            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/profile_level_marker_size"
                android:layout_height="@dimen/profile_level_marker_size"
                android:layout_alignEnd="@id/profile_image_container"
                android:layout_alignStart="@id/profile_image_container"
                android:layout_below="@id/profile_image_container"
                android:layout_marginTop="@dimen/margin_negative_15"
                android:src="?nextLevelMarkerIcon" />

            <TextView
                android:id="@+id/profile_image_level"
                android:layout_width="@dimen/profile_level_marker_size"
                android:layout_height="@dimen/profile_level_marker_size"
                android:layout_alignEnd="@id/profile_image_container"
                android:layout_alignStart="@id/profile_image_container"
                android:layout_below="@id/profile_image_container"
                android:layout_marginTop="@dimen/margin_negative_15"
                android:gravity="center"
                android:textColor="#686868"
                android:textStyle="bold"
                tools:text="0" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/profile_image_container"
                android:layout_alignStart="@id/profile_image_container"
                android:layout_below="@id/profile_image_container"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_14"
                android:textStyle="bold"
                tools:text="Test User" />

            <TextView
                android:id="@+id/nickTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/profile_image_container"
                android:layout_alignStart="@id/profile_image_container"
                android:layout_below="@id/nameTextView"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="12sp"
                tools:text="Nickname" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_below="@id/nickTextView" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_image_container"
                android:layout_marginStart="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_toEndOf="@+id/nameTextView">

                <ImageView
                    android:id="@+id/blue_shield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/online_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-42dp"
            android:layout_toEndOf="@id/imageInfoContainer"
            android:layout_marginTop="32dp"
            android:background="@drawable/user_status_backgraound"
            android:padding="@dimen/padding_4"
            android:paddingEnd="@dimen/padding_12"
            android:paddingStart="@dimen/margin_30"
            android:text="@string/offline"
            android:textAlignment="textEnd"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_size_10"
            android:textStyle="normal" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_16"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/guideline8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/profile_container"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/chat_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/chat_button_phone_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/oup_chat"
                app:layout_constraintBottom_toTopOf="@id/guideline11"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="23dp" />

            <TextView
                android:id="@+id/chat_button_phone_caption"
                android:layout_width="0dp"
                android:layout_height="11dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/chat"
                android:textAlignment="center"
                android:textColor="?black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/guideline11" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/video_button"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/oup_videocall"
                app:layout_constraintBottom_toTopOf="@id/guideline12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.71"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="316dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/video_chat"
                android:textAlignment="center"
                android:textColor="?black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/guideline12" />
        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/more_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/oup_more"
                app:layout_constraintBottom_toTopOf="@id/guideline14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.61"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="316dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/more"
                android:textAlignment="center"
                android:textColor="?black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/guideline14" />
        </android.support.constraint.ConstraintLayout>


    </LinearLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="283dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.61"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="402dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="527dp" />

    <RelativeLayout
        android:id="@+id/common_friends_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/guideline10"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout2"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/friends_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/padding_4"
            android:textColor="?black" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/in_common_recycler_view"
            android:layout_width="match_parent"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:layout_height="match_parent"
            android:layout_below="@id/friends_community"
            android:layout_toStartOf="@+id/left_scroll" />

        <ImageView
            android:id="@+id/left_scroll"
            android:layout_width="@dimen/height_20"
            android:layout_height="match_parent"
            android:alpha="0.25"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_25"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_right" />

        <ProgressBar
            android:id="@+id/friend_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/progress_bar"
            android:layout_height="@dimen/progress_bar"
            tools:visibility="gone"
            android:layout_centerInParent="true"
            android:elevation="@dimen/elevation_2" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/public_chats_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/common_friends_container"
        app:layout_constraintVertical_bias="0.0">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#17000000" />

        <TextView
            android:id="@+id/public_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/padding_4"
            android:textColor="?black" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/all_friends_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:layout_below="@id/public_chat_text"
            android:layout_toStartOf="@+id/left_scroll_chat" />

        <ImageView
            android:id="@+id/left_scroll_chat"
            android:layout_width="@dimen/height_20"
            android:layout_height="match_parent"
            android:alpha="0.25"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_25"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_right" />

        <ProgressBar
            android:id="@+id/chat_room_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/progress_bar"
            android:layout_height="@dimen/progress_bar"
            tools:visibility="gone"
            android:layout_centerInParent="true"
            android:elevation="@dimen/elevation_2" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/guideline9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline8">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/posts_count_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_25"
                    tools:text="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_2"
                    android:text="@string/pinned"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#17000000" />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#17000000" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/friends_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_25"
                    tools:text="15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_2"
                    android:text="@string/friends"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#17000000" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#17000000" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/comments_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_25"
                    tools:text="28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_2"
                    android:text="@string/comments"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#17000000" />
        </RelativeLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>