<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_dark_green"
    tools:ignore="MissingPrefix">

    <View
        android:id="@+id/top_split_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:layout_below="@id/top_buttons_container"
        android:background="@color/colorPrimary" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@drawable/phone_background"
        android:orientation="horizontal"
        android:tileMode="repeat" />
    <!-- BOTTOM BUTTONS CONTAINER -->

    <!--Forgot password container-->
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_buttons_container">

        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="#99000000"
            android:scaleType="centerCrop"
            tools:src="@drawable/background_sporting" />

        <RelativeLayout
            android:id="@+id/forgot_password_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"

            android:clickable="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/forgot_password_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10"
                android:src="@drawable/ic_arrow_back" />

            <RelativeLayout
                android:layout_width="@dimen/login_conteiner_width"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin_40"
                android:clickable="true"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/login_forgot_pass_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/standard_button_height"
                    android:background="@drawable/text_login_selector"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:nextFocusDown="@+id/login_password"
                    android:padding="@dimen/padding_8"
                    android:textAlignment="center"
                    android:textColor="?white"
                    android:textColorHint="?white" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:animateLayoutChanges="true"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/clickOutsideContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:animateLayoutChanges="true"
                android:clickable="true"
                android:focusable="false"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_logo"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/club_logo"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="-4dp"
                    android:gravity="center"
                    android:lineSpacingMultiplier="0.8"
                    android:maxWidth="100dp"
                    android:text="@string/slogan"
                    android:textColor="@color/white_alpha_40"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/facebook_button"
                    style="@style/facebook_login_button_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_30"
                    android:layout_marginStart="@dimen/margin_30"
                    android:layout_marginTop="60dp"
                    android:text="@string/login_facebook"
                    android:textAllCaps="false"
                    android:textColor="@color/white_alpha_90"
                    android:textSize="@dimen/font_size_16" />

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/sign_up_facebook"
                    style="@style/facebook_login_button_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_facebook"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/orContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_16"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_1"
                        android:layout_weight="3"
                        android:background="@color/transparent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_1"
                        android:layout_weight="1"
                        android:alpha="0.5"
                        android:background="?popupsCaptionColor" />

                    <TextView
                        android:id="@+id/or_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:text="@string/or"
                        android:textAllCaps="true"
                        android:textColor="?popupsCaptionColor" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_1"
                        android:layout_weight="1"
                        android:alpha="0.5"
                        android:background="?popupsCaptionColor" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_1"
                        android:layout_weight="3"
                        android:background="@color/transparent" />
                </LinearLayout>

                <EditText
                    android:id="@+id/login_email"
                    fontPath="fonts/TitilliumWeb-SemiBold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/standard_button_height"
                    android:layout_marginEnd="@dimen/margin_30"
                    android:layout_marginStart="@dimen/margin_30"
                    android:background="@drawable/text_login_selector"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:nextFocusDown="@+id/login_password"
                    android:padding="@dimen/padding_8"
                    android:textAlignment="center"
                    android:textColor="?black"
                    android:textColorHint="#8a000000" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/passwordInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="@dimen/margin_30"
                    android:layout_marginStart="@dimen/margin_30"
                    android:layout_marginTop="10dp"
                    app:hintEnabled="false"
                    tools:hint="@string/password">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/login_password"
                        fontPath="fonts/TitilliumWeb-SemiBold.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/standard_button_height"
                        android:background="@drawable/text_login_selector"
                        android:drawablePadding="-48dp"
                        android:gravity="center"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:padding="@dimen/padding_8"
                        android:textAlignment="center"
                        android:textColor="?black"
                        android:textColorHint="#8a000000"
                        android:theme="@style/AppTheme.BlackControls" />

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/loginButton"
                    fontPath="fonts/TitilliumWeb-SemiBold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/standard_button_height"
                    android:layout_marginEnd="@dimen/margin_30"
                    android:layout_marginStart="@dimen/margin_30"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button_login_login"
                    android:text="@string/sign_in"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_18" />

                <TextView
                    android:id="@+id/forgot_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/loginButton"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp"
                    android:layout_marginEnd="@dimen/margin_60"
                    android:layout_marginStart="@dimen/margin_60"
                    android:layout_marginTop="16dp"
                    android:text="@string/forgot_your_password"
                    android:textColor="@color/white" />

                <ProgressBar
                    android:id="@+id/login_progress_bar"
                    android:layout_width="@dimen/prodgres_bar"
                    android:layout_height="@dimen/prodgres_bar"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-34dp"
                    android:elevation="@dimen/elevation_2"
                    android:theme="@style/AppTheme.BlackAccent"
                    android:visibility="gone"
                    tools:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/bottom_buttons_container_reset"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/standard_button_height"
                    android:layout_marginEnd="@dimen/margin_30"
                    android:layout_marginStart="@dimen/margin_30"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_login_login"
                    android:clickable="true"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/reset_text"
                        fontPath="fonts/TitilliumWeb-SemiBold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/password_reset"
                        android:textColor="@color/black_alpha_70"
                        android:textSize="@dimen/font_size_18"
                        android:visibility="visible" />

                    <ProgressBar
                        android:id="@+id/reset_progress_bar"
                        android:layout_width="@dimen/prodgres_bar"
                        android:layout_height="@dimen/prodgres_bar"
                        android:layout_centerInParent="true"
                        android:elevation="@dimen/elevation_2"
                        android:theme="@style/AppTheme.BlackAccent"
                        android:visibility="gone" />

                </RelativeLayout>


            </LinearLayout>
            <!--Login username and password container-->
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/topSpacer"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/colorPrimary"
        tools:visibility="gone" />

    <RelativeLayout
        android:id="@+id/top_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height"
        android:layout_below="@id/topSpacer"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/standard_button_height"
            android:layout_height="@dimen/standard_button_height"
            android:layout_alignParentBottom="true"
            android:alpha="0.75"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

        <TextView
            style="@style/boldText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginEnd="1dp"
            android:gravity="center_vertical"
            android:text="@string/sign_in"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c2000000"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

    <ImageView
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo_fc" />

</RelativeLayout>
