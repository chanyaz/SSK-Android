<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/close_news_button"
        android:layout_width="@dimen/standard_button_height"
        android:layout_height="@dimen/standard_button_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/close_button" />

    <Button
        android:id="@+id/share_news_to_wall_button"
        android:layout_width="@dimen/standard_button_height"
        android:layout_height="@dimen/standard_button_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/share_to_wall"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/post_container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <RelativeLayout
                    android:id="@+id/media_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:id="@+id/content_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY" />

                    <VideoView
                        android:id="@+id/content_video"
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/green_dark_2_semitransparent">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/strap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_10"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/lightGrey"
                        android:textSize="16sp" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/top_buttons_contaniner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_container"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/likes_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_8"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/likes_icon"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/ic_like"
                        android:backgroundTint="@color/white" />

                    <ImageView
                        android:id="@+id/likes_icon_liked"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/ic_like"
                        android:backgroundTint="@color/colorAccent"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/likes_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pin_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_8"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/pin_icon"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/ic_pin"
                        android:backgroundTint="@color/white" />


                    <TextView
                        android:id="@+id/pin_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/share_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_8"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/share_icon"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/ic_share"
                        android:backgroundTint="@color/white" />


                    <TextView
                        android:id="@+id/share_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comments_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_8"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/comments_icon"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/ic_comment"
                        android:backgroundTint="@color/white" />


                    <TextView
                        android:id="@+id/comments_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_buttons_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/header_container"
                android:layout_marginEnd="35dp"
                android:background="@drawable/chat_bubble"
                android:backgroundTint="@color/white"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/share_facebook"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="@dimen/margin_5"
                    android:src="@drawable/ic_share_facebook" />

                <ImageView
                    android:id="@+id/share_twitter"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="@dimen/margin_5"
                    android:src="@drawable/ic_shate_twitter" />

            </LinearLayout>

            <View
                android:id="@+id/top_horizontal_split_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/top_buttons_contaniner"
                android:background="@color/green_dark_2" />

            <TextView
                android:id="@+id/content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_horizontal_split_line"
                android:layout_margin="@dimen/margin_20"
                android:textColor="@android:color/white" />

            <View
                android:id="@+id/bottom_horizontal_split_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/content_text"
                android:background="@color/green_dark_2" />

            <LinearLayout
                android:id="@+id/tutorial_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bottom_horizontal_split_line"
                android:layout_marginBottom="-20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tutorial_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/green_dark_2" />

                <TextView
                    android:id="@+id/tutorial_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_15"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/commnets_wall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tutorial_container"
                android:layout_marginTop="@dimen/margin_20" />

            <LinearLayout
                android:id="@+id/tutorial_container_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/commnets_wall"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tutorial_bottom_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_15"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="160dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/coin_image"
                        android:layout_marginTop="-10dp"
                        android:background="@color/green_dark_2_semitransparent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="10dp"
                            android:text="Tap here to earn 5 SSK for viewing this How to!"
                            android:textAlignment="center"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/coin_image"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/margin_10"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tutorial_coins" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/post_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:visibility="gone">

        <EditText
            android:id="@+id/post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_20"
            android:layout_toEndOf="@+id/uploaded_image"
            android:layout_toStartOf="@+id/post_post_button"
            android:backgroundTint="@color/colorPrimary"
            android:hint="Write your post here."
            android:textColor="@color/white"
            android:textColorHint="@color/lightGrey" />

        <ImageView
            android:id="@+id/post_post_button"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/btn_send"
            android:tint="@color/white"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>