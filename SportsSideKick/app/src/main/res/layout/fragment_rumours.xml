<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/prodgres_bar"
        android:layout_height="@dimen/prodgres_bar"
        android:layout_centerInParent="true"
        android:elevation="@dimen/elevation_2"
        android:visibility="gone"
        app:indicatorName="LineSpinFadeLoaderIndicator" />


    <com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout
        android:id="@+id/rumours_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:paddingEnd="@dimen/padding_8"
        android:paddingStart="@dimen/padding_8"
        app:srl_direction="bottom">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/fragment_rumors_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/fragment_rumors_top_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/fragment_rumors_top_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/rumours_top_image_heihgt"
                        android:background="@drawable/img_rumours_top_image" />

                    <TextView
                        android:id="@+id/fragment_rumors_top_headline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textAllCaps="true"
                        android:text="@string/rumours_caption"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_28" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fragment_rumors_all_big_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/fragment_rumors_top_container" />

                <RelativeLayout
                    android:id="@+id/fragment_rumors_all_single_rumours_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/fragment_rumors_top_container"
                    android:padding="@dimen/padding_16"
                    android:visibility="gone">

                    <View
                        android:id="@+id/fragment_rumors_divider"
                        android:layout_width="@dimen/space_0"
                        android:layout_height="@dimen/space_0"
                        android:layout_centerHorizontal="true" />

                    <RelativeLayout
                        android:id="@+id/fragment_rumors_single_rumour_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/fragment_rumors_divider"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="@dimen/margin_8"
                        android:layout_marginEnd="@dimen/margin_8"
                        android:background="@color/colorPrimary">

                        <com.github.rongi.rotate_layout.layout.RotateLayout
                            android:id="@+id/fragment_rumors_single_rumour_headline_container_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@+id/fragment_rumors_single_rumour_info_container_1"
                            android:layout_alignParentTop="true"
                            app:angle="90"> <!-- Specify rotate angle here -->

                            <TextView
                                android:id="@+id/fragment_rumors_single_rumour_headline_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/single_rumour_headline"
                                android:gravity="center"
                                android:padding="@dimen/padding_8"
                                android:textAllCaps="true"
                                android:text="@string/rumours_caption"
                                android:textColor="@color/colorPrimary" />
                        </com.github.rongi.rotate_layout.layout.RotateLayout>

                        <RelativeLayout
                            android:id="@+id/fragment_rumors_single_rumour_info_container_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/fragment_rumors_single_rumour_headline_container_1">

                            <TextView
                                android:id="@+id/fragment_rumors_single_rumour_info_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:padding="@dimen/padding_8"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/fragment_rumors_single_rumour_time_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@+id/fragment_rumors_single_rumour_info_1"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:padding="@dimen/padding_8"
                                android:singleLine="true"
                                android:textColor="@color/colorAccent" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/fragment_rumors_single_rumour_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignStart="@+id/fragment_rumors_divider"
                        android:layout_marginBottom="@dimen/margin_8"
                        android:layout_marginStart="@dimen/margin_8"
                        android:background="@color/colorPrimary">

                        <com.github.rongi.rotate_layout.layout.RotateLayout
                            android:id="@+id/fragment_rumors_single_rumour_headline_container_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@+id/fragment_rumors_single_rumour_info_container_2"
                            android:layout_alignParentTop="true"
                            app:angle="90"> <!-- Specify rotate angle here -->

                            <TextView
                                android:id="@+id/fragment_rumors_single_rumour_headline_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/single_rumour_headline"
                                android:gravity="center"
                                android:padding="@dimen/padding_8"
                                android:textAllCaps="true"
                                android:text="@string/rumours_caption"
                                android:textColor="@color/black" />
                        </com.github.rongi.rotate_layout.layout.RotateLayout>

                        <RelativeLayout
                            android:id="@+id/fragment_rumors_single_rumour_info_container_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/fragment_rumors_single_rumour_headline_container_2">

                            <TextView
                                android:id="@+id/fragment_rumors_single_rumour_info_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:padding="@dimen/padding_8"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/fragment_rumors_single_rumour_time_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@+id/fragment_rumors_single_rumour_info_2"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:padding="@dimen/padding_8"
                                android:textColor="@color/colorAccent" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/fragment_rumors_single_rumour_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/fragment_rumors_divider"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/fragment_rumors_single_rumour_1"
                        android:layout_marginEnd="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_8"
                        android:background="@color/colorPrimary">

                        <com.github.rongi.rotate_layout.layout.RotateLayout
                            android:id="@+id/fragment_rumors_single_rumour_headline_container_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@+id/fragment_rumors_single_rumour_info_container_3"
                            android:layout_alignParentTop="true"
                            app:angle="90"> <!-- Specify rotate angle here -->

                            <TextView
                                android:id="@+id/fragment_rumors_single_rumour_headline_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/single_rumour_headline"
                                android:gravity="center"
                                android:padding="@dimen/padding_8"
                                android:textAllCaps="true"
                                android:text="@string/rumours_caption"
                                android:textColor="@color/black" />
                        </com.github.rongi.rotate_layout.layout.RotateLayout>

                        <RelativeLayout
                            android:id="@+id/fragment_rumors_single_rumour_info_container_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/fragment_rumors_single_rumour_headline_container_3">

                            <TextView
                                android:id="@+id/fragment_rumors_single_rumour_info_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:padding="@dimen/padding_8"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/fragment_rumors_single_rumour_time_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@+id/fragment_rumors_single_rumour_info_3"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:padding="@dimen/padding_8"
                                android:singleLine="true"
                                android:textColor="@color/colorAccent" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/fragment_rumors_single_rumour_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignStart="@+id/fragment_rumors_divider"
                        android:layout_below="@+id/fragment_rumors_single_rumour_2"
                        android:layout_marginStart="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_8"
                        android:background="@color/colorPrimary">

                        <com.github.rongi.rotate_layout.layout.RotateLayout
                            android:id="@+id/fragment_rumors_single_rumour_headline_container_4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@+id/fragment_rumors_single_rumour_info_container_4"
                            android:layout_alignParentTop="true"
                            app:angle="90"> <!-- Specify rotate angle here -->

                            <TextView
                                android:id="@+id/fragment_rumors_single_rumour_headline_4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/single_rumour_headline"
                                android:gravity="center"
                                android:padding="@dimen/padding_8"
                                android:textAllCaps="true"
                                android:text="@string/rumours_caption"
                                android:textColor="@color/black" />
                        </com.github.rongi.rotate_layout.layout.RotateLayout>

                        <RelativeLayout
                            android:id="@+id/fragment_rumors_single_rumour_info_container_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/fragment_rumors_single_rumour_headline_container_4">

                            <TextView
                                android:id="@+id/fragment_rumors_single_rumour_info_4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:padding="@dimen/padding_8"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/fragment_rumors_single_rumour_time_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@+id/fragment_rumors_single_rumour_info_4"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:padding="@dimen/padding_8"
                                android:singleLine="true"
                                android:textColor="@color/colorAccent" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fragment_rumors_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_rumors_all_big_list" />

                <!--<com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout-->
                <!--android:id="@+id/rumours_swipe_refresh_layout"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="300dp"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_below="@+id/fragment_rumors_all_big_list"-->
                <!--android:paddingEnd="@dimen/padding_8"-->
                <!--android:paddingStart="@dimen/padding_8"-->
                <!--app:srl_direction="bottom"-->
                <!--android:background="@color/black_transparent_154">-->


                <!--<android.support.v7.widget.RecyclerView-->
                <!--android:id="@+id/fragment_rumors_recycler_view"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"/>-->

                <!--</com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout>-->

            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout>
</RelativeLayout>
