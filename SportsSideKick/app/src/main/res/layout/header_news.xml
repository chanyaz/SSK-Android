<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-16dp"
    tools:layout_marginBottom="0dp"
    tools:showIn="@layout/fragment_news">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/topImage"
        android:layout_width="0dp"
        android:layout_height="152dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/image_wall_background" />

    <TextView
        android:id="@+id/topCaption"
        style="@style/semiBoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:shadowColor="@color/black_transparent_154"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="@string/news"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/topImage"
        app:layout_constraintStart_toStartOf="@+id/topImage"
        app:layout_constraintTop_toTopOf="@+id/topImage" />
</android.support.constraint.ConstraintLayout>