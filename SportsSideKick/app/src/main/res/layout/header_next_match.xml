<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wall_top_image_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/fragment_wall">

    <ImageView
        android:id="@+id/wall_top_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:scaleType="centerCrop"
        tools:src="@drawable/image_wall_background" />

    <TextView
        android:id="@+id/topCaption"
        style="@style/semiBoldText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="25dp"
        android:shadowColor="@color/black_transparent_154"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="@string/wall"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_36"
        android:visibility="gone"
        tools:visibility="gone" />

    <RelativeLayout
        android:id="@+id/wall_top_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/wall_top_image"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:id="@+id/wall_top_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wall_team_left_name"
                fontPath="fonts/TitilliumWeb-SemiBold.ttf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:gravity="end"
                android:maxLength="6"
                android:maxLines="1"
                android:paddingEnd="@dimen/padding_2"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="SCP" />

            <ImageView
                android:id="@+id/wall_team_left_image"
                android:layout_width="60dp"
                android:layout_height="@dimen/height_70"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/wall_team_left_name"
                tools:src="@drawable/sportingportugal" />

            <TextView
                android:id="@+id/wall_team_vs"
                fontPath="fonts/TitilliumWeb-Light.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/padding_8"
                android:text="@string/vs"
                android:textColor="@color/white"
                android:textSize="23sp"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/wall_team_right_image"
                android:layout_width="60dp"
                android:layout_height="@dimen/height_70"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/wall_team_vs"
                tools:src="@drawable/sportingportugal" />

            <TextView
                android:id="@+id/wall_team_right_name"
                fontPath="fonts/TitilliumWeb-SemiBold.ttf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:gravity="start"
                android:maxLength="6"
                android:maxLines="1"
                android:padding="@dimen/padding_8"
                android:paddingStart="@dimen/padding_2"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="ASP" />

        </LinearLayout>

        <TextView
            android:id="@+id/wall_team_next_match"
            fontPath="fonts/TitilliumWeb-SemiBold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wall_top_info"
            android:layout_centerHorizontal="true"
            android:text="@string/match_next"
            android:textColor="?nextMatchTextPhoneColor" />

        <TextView
            android:id="@+id/wall_team_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wall_team_next_match"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            tools:text="Thu 15 Feb - 3 days" />
    </RelativeLayout>

    <Button
        android:id="@+id/buttonTickets"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignBottom="@id/wall_top_image"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:background="@drawable/button_tickets"
        android:minWidth="0dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="@string/tickets"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>