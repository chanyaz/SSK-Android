<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_5">


    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_5"
        android:background="@drawable/ic_chat_bubble_right">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demo content."
            android:textColor="@color/white"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/content_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="80dp"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:maxHeight="80dp"
            android:scaleType="centerInside"
            android:src="@drawable/play_button_icon" />


    </RelativeLayout>

    <TextView
        android:id="@+id/sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_container"
        android:layout_toStartOf="@+id/spliter"
        android:alpha="0.5"
        android:text="@string/you"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/spliter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_container"
        android:layout_toStartOf="@+id/timestamp"
        android:alpha="0.5"
        android:text=" | "
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/content_container"
        android:layout_marginEnd="@dimen/margin_15"
        android:alpha="0.5"
        android:textColor="@color/white"
        android:textSize="10sp" />

</RelativeLayout>