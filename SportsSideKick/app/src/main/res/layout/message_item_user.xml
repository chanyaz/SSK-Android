<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/margin_5"
    android:layout_marginStart="@dimen/margin_15">


    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:foreground="?selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="6dp"
        android:layout_marginEnd="@dimen/margin_5"
        android:background="@drawable/chat_message_right">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            fontPath="fonts/TitilliumWeb-SemiBold.ttf"
            tools:textStyle="bold"
            android:lineSpacingMultiplier="0.9"
            android:layout_marginStart="4dp"
            tools:text="Demo content."
            android:textColor="#313230" />

        <ImageView
            android:id="@+id/contentImage"
            android:layout_width="wrap_content"
            android:foreground="?selectableItemBackground"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/height_80"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/play_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/height_80"
            android:scaleType="centerInside"
            android:src="@drawable/play_button_icon" />

        <ProgressBar
        style="?android:attr/progressBarStyle"
            android:id="@+id/progressBar"
            android:layout_width="@dimen/progress_bar_width"
            android:layout_height="@dimen/progress_bar_height"
            android:layout_margin="@dimen/margin_10"
            android:layout_centerInParent="true"
            android:elevation="@dimen/elevation_2"
            android:visibility="gone" />
    </RelativeLayout>

   <!-- Sender info -->
    <TextView
        android:id="@+id/sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_container"
        android:layout_toStartOf="@+id/splitter"
        android:alpha="0.5"
        android:text="@string/you"
        tools:text="Sender"
        android:textColor="@color/chatDetailsColorRef"
        android:textSize="@dimen/font_size_10" />

    <TextView
        android:id="@+id/splitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_container"
        android:layout_toStartOf="@+id/timestamp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:alpha="0.5"
        android:text="|"
        android:textColor="@color/chatDetailsColorRef"
        android:textSize="@dimen/font_size_10"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/timestamp"
        tools:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/content_container"
        android:layout_marginEnd="@dimen/margin_15"
        android:alpha="0.5"
        android:textColor="@color/chatDetailsColorRef"
        android:textSize="@dimen/font_size_10" />
</RelativeLayout>