<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/popup_friend_request_width"
    android:layout_height="@dimen/popup_friend_request_height"
    android:background="@drawable/popup_bottom_background_dark"
    android:orientation="vertical"
    android:clickable="true">
    <TextView
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height"
        android:gravity="center"
        android:text="@string/friend_requests"
        android:textColor="@color/colorAccent" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent" />
    <View
        android:id="@+id/top_split_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:layout_below="@+id/caption"
        android:background="@android:color/black" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/prodgres_bar"
        android:layout_height="@dimen/prodgres_bar"
        android:layout_centerInParent="true"
        android:elevation="@dimen/elevation_2"
        app:indicatorName="LineSpinFadeLoaderIndicator" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/requests_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/caption"
        android:layout_above="@+id/bottom_buttons_container"
        android:layout_margin="@dimen/margin_20" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/popup_friend_request_button_size"
        android:layout_height="@dimen/popup_friend_request_button_size"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/top_split_line"
        android:layout_alignParentEnd="true"
        android:src="@drawable/video_close_button"/>

    <!-- BOTTOM BUTTONS CONTAINER -->
    <RelativeLayout
        android:id="@+id/bottom_buttons_container"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/popup_language_bottom_buttons_container_height"
        android:layout_alignParentBottom="true"
        android:clickable="true">

        <View
            android:id="@+id/bottom_split_line"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/black" />

        <ImageButton
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_30"
            android:layout_marginEnd="@dimen/margin_10"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/popup_confirmation_button" />
    </RelativeLayout>
</RelativeLayout>