<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/green_dark_2">

    <RelativeLayout
        android:id="@+id/chat_headline_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height">

        <ImageButton
            android:id="@+id/chat_join_headline_close_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_close"
            android:tint="@color/colorPrimaryLight"
            android:background="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_8"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimarySemiLight"
        android:layout_below="@+id/chat_headline_container"
        android:layout_above="@+id/bottom_public_chats_container">

        <View
            android:id="@+id/top_vertical_spliter"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_button_height"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/create_a_chat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_button_height"
            android:layout_toStartOf="@+id/top_vertical_spliter"
            android:background="@color/green_dark_3"
            android:gravity="center"
            android:text="Create Chat"
            android:textColor="@color/white_semitransparent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_button_height"
            android:layout_toEndOf="@+id/top_vertical_spliter"
            android:gravity="center"
            android:text="Join Chat"
            android:textColor="@color/colorAccent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_toStartOf="@+id/top_vertical_spliter"
            android:background="@color/colorPrimaryLight" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/top_vertical_spliter"
            android:background="@color/colorAccent" />

        <View
            android:id="@+id/top_split_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/top_vertical_spliter"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/caption_label"
            android:layout_width="match_parent"
            android:layout_height="@dimen/popup_join_chat_caption_label_height"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/top_vertical_spliter"
            android:gravity="center"
            android:text="Public Chats"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/chat_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/top_vertical_spliter"
            android:background="@color/green_dark_2"
            android:gravity="start|center_vertical"
            android:hint="Search Public Chats"
            android:imeOptions="flagNoExtractUi"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white_semitransparent"
            android:textSize="14sp"
            android:padding="@dimen/margin_20"
            android:layout_toStartOf="@+id/chat_join_search_button" />

        <ImageButton
            android:layout_width="@dimen/create_chat_name_label_height"
            android:layout_height="@dimen/create_chat_name_label_height"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_search"
            android:background="@color/colorPrimaryLight"
            android:layout_below="@+id/top_vertical_spliter"
            android:id="@+id/chat_join_search_button" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_name_edit_text">

            <tv.sportssidekick.sportssidekick.util.AutofitRecyclerView
                android:id="@+id/friends_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.v4.widget.SwipeRefreshLayout>

        <ExpandableListView
            android:id="@+id/join_chat_search_result_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/chat_name_edit_text"
            android:visibility="gone"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bottom_public_chats_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_90"
        android:layout_alignParentBottom="true"
        android:background="@color/green_dark_2">

        <TextView
            android:id="@+id/bottom_public_chats_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Public Chats your friends are in"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_10"
            android:padding="@dimen/padding_8"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/bottom_public_chats_friends_in_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom_public_chats_headline"/>

    </RelativeLayout>
</RelativeLayout>