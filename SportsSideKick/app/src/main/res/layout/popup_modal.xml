<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_bottom_background_dark"
    android:orientation="vertical"
    android:clickable="true">
    <TextView
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginStart="@dimen/margin_80"
        android:layout_marginEnd="@dimen/margin_80"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/margin_40"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_below="@+id/caption"
        android:layout_marginEnd="@dimen/margin_40"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>


    <!-- BOTTOM BUTTONS CONTAINER -->
    <RelativeLayout
        android:id="@+id/bottom_buttons_container"
        android:layout_below="@+id/text"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="60dp">
        <ImageButton
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_30"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/popup_cancel_button" />
        <ImageButton
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/cancel_button"
            android:layout_marginBottom="@dimen/margin_20"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/popup_confirmation_button" />
    </RelativeLayout>
</RelativeLayout>