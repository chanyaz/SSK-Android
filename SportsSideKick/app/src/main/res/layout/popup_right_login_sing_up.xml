<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_8">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/phone_background" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:scaleType="centerCrop"
        android:src="@drawable/video_chat_background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/margin_8"
            android:paddingTop="@dimen/margin_8">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/height_70"
                    android:layout_height="@dimen/height_70"
                    android:layout_gravity="center"
                    android:src="@drawable/club_logo" />


                <TextView
                    android:id="@+id/textView"
                    style="@style/shadow_text_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_15"
                    android:text="@string/slogan"
                    android:textAlignment="center"
                    android:textColor="?popupsCaptionColor"
                    android:textSize="@dimen/font_size_22" />

                <TextView
                    android:id="@+id/description"
                    style="@style/shadow_text_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:text="@string/login_slider_chat"
                    android:textAlignment="center"
                    android:textColor="?popupsCaptionColor"
                    android:textSize="@dimen/font_size_18" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_16"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.095" />

                    <Button
                        android:id="@+id/join_now_button"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/standard_button_height"
                        android:layout_weight="0.397"
                        android:background="@drawable/gym_bag_button_background"
                        android:text="@string/join"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_19" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.023" />

                    <Button
                        android:id="@+id/login_button"
                        android:layout_width="0dp"

                        android:layout_height="@dimen/standard_button_height"
                        android:layout_gravity="center"
                        android:layout_weight="0.397"
                        android:background="@drawable/gym_bag_button_background"
                        android:gravity="center"
                        android:text="@string/sign_in"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_19" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.095" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_15"
                    android:src="@drawable/logo_fq" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/close_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/margin_8"
        android:background="@null"
        app:srcCompat="@drawable/ic_close" />

</RelativeLayout>
