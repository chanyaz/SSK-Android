<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin_8"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/phone_background" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:scaleType="centerCrop"
        tools:src="@drawable/video_chat_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/height_80"
                android:layout_height="@dimen/height_80"
                android:layout_gravity="center"
                android:src="@drawable/club_logo" />


            <TextView
                android:id="@+id/textView"
                style="@style/shadow_text_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_30"
                android:text="@string/slogan"
                android:textAlignment="center"
                android:textColor="?popupsCaptionColor"
                android:textSize="@dimen/font_size_22" />

            <TextView
                android:id="@+id/description"
                style="@style/shadow_text_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_30"
                android:layout_marginTop="@dimen/margin_15"
                android:text="@string/login_slider_chat"
                android:textAlignment="center"
                android:textColor="?popupsCaptionColor"
                android:textSize="@dimen/font_size_18" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.337" />

                <Button
                    android:id="@+id/join_now_button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/standard_button_height"
                    android:layout_weight="0.325"
                    android:background="@drawable/gym_bag_button_background"
                    android:text="@string/join"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_19" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.337" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_20"
                android:weightSum="1">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.337" />

                <Button
                    android:id="@+id/login_button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/standard_button_height"
                    android:layout_gravity="center"
                    android:layout_weight="0.325"
                    android:background="@drawable/gym_bag_button_background"
                    android:text="@string/sign_in"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_19" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.337" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_30"
                android:src="@drawable/logo_fc" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
