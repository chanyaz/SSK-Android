<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    android:layout_marginEnd="90dp"
    android:layout_marginStart="90dp"
    android:layout_marginTop="60dp">

    <!-- BACKGROUND -->
    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimarySemiLight"
        android:layout_alignStart="@+id/bundles_container"
        android:layout_alignEnd="@+id/bundles_container"
        android:layout_below="@+id/top_buttons_container"
        android:layout_above="@+id/bottom_buttons_container">
    </RelativeLayout>

    <!-- TOP BUTTONS CONTAINER -->
    <LinearLayout
        android:id="@+id/top_buttons_container"
        android:layout_width="match_parent"
        android:layout_alignStart="@+id/bundles_container"
        android:layout_alignEnd="@+id/bundles_container"   android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/your_profile_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:background="@color/colorAccentLight"
            android:gravity="center"
            android:text="@string/your_profile"
            android:textColor="@color/white_semitransparent" />

        <TextView
            android:id="@+id/your_wallet_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:background="@color/colorPrimarySemiLight"
            android:gravity="center"
            android:text="@string/your_wallet"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/your_stash_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccentLight"
            android:gravity="center"
            android:text="@string/your_stash"
            android:textColor="@color/white_semitransparent" />
    </LinearLayout>

    <!-- TOP BUTTONS INDICATOR LINES -->
    <LinearLayout
        android:layout_alignStart="@+id/bundles_container"
        android:layout_alignEnd="@+id/bundles_container"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryLight" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:background="@color/colorAccent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryLight" />
    </LinearLayout>


    <!-- COIN INDICATOR -->
    <RelativeLayout
        android:id="@+id/coin_indicator_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_buttons_container"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/coin_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/skk_coin_large" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/coin_image">

            <TextView
                android:id="@+id/you_have_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="YOU HAVE"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/you_have_caption"
                android:text="2,539 $$K"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

    <!-- $$K BUNDLES -->
    <RelativeLayout
        android:id="@+id/bundles_container"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/coin_indicator_split_line">

        <TextView
            android:id="@+id/ssk_bundles_caption"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="$$K BUNDLES"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/bundle_1"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/ssk_bundles_caption"
            android:layout_marginEnd="20dp"
            android:layout_alignParentStart="true"

            android:src="@drawable/bundle_1"
            android:cropToPadding="false"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
        <ImageView
            android:id="@+id/bundle_2"
            android:layout_below="@+id/ssk_bundles_caption"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/bundle_1"
            android:src="@drawable/bundle_2"/>
        <ImageView
            android:id="@+id/bundle_3"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/ssk_bundles_caption"
            android:layout_toEndOf="@+id/bundle_2"
            android:src="@drawable/bundle_3"/>
        <ImageView
            android:id="@+id/bundle_4"
            android:layout_marginEnd="20dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_toEndOf="@+id/bundle_3"
            android:layout_below="@+id/ssk_bundles_caption"
            android:src="@drawable/bundle_4"/>
        <ImageView
            android:id="@+id/bundle_5"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/ssk_bundles_caption"
            android:layout_toEndOf="@+id/bundle_4"
            android:src="@drawable/bundle_5"/>

        <TextView
            android:id="@+id/bundle_1_award"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="15dp"
            android:text="10 $$K"
            android:layout_alignStart="@+id/bundle_1"
            android:layout_alignBottom="@+id/bundle_1"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/bundle_1_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="15dp"
            android:text="Watch promo"
            android:layout_alignEnd="@+id/bundle_1"
            android:layout_alignBottom="@+id/bundle_1"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/bundle_2_award"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="15dp"
            android:text="100 $$K"
            android:layout_alignStart="@+id/bundle_2"
            android:layout_alignBottom="@+id/bundle_2"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/bundle_2_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="15dp"
            android:text="$1"
            android:layout_alignEnd="@+id/bundle_2"
            android:layout_alignBottom="@+id/bundle_2"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/bundle_3_award"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="15dp"
            android:text="500 $$K"
            android:layout_alignStart="@+id/bundle_3"
            android:layout_alignBottom="@+id/bundle_3"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/bundle_3_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="15dp"
            android:text="$4"
            android:layout_alignEnd="@+id/bundle_3"
            android:layout_alignBottom="@+id/bundle_3"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/bundle_4_award"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="15dp"
            android:text="1000 $$K"
            android:layout_alignStart="@+id/bundle_4"
            android:layout_alignBottom="@+id/bundle_4"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/bundle_4_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="15dp"
            android:text="$7"
            android:layout_alignEnd="@+id/bundle_4"
            android:layout_alignBottom="@+id/bundle_4"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/bundle_5_award"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="15dp"
            android:text="1500 $$K"
            android:layout_alignStart="@+id/bundle_5"
            android:layout_alignBottom="@+id/bundle_5"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/bundle_5_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="15dp"
            android:text="$10"
            android:layout_alignEnd="@+id/bundle_5"
            android:layout_alignBottom="@+id/bundle_5"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <!-- ONE MONTH -->
    <RelativeLayout
        android:id="@+id/monthly_container"
        android:layout_below="@+id/ssk_bundles_split_line"

        android:layout_alignStart="@+id/bundles_container"
        android:layout_toStartOf="@+id/statement_split_line"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/montly_bag_image"
            android:layout_width="140dp"
            android:adjustViewBounds="true"   android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fan_special_1"/>
        <TextView
            android:id="@+id/monthly_image_caption"
            android:layout_width="wrap_content"
            android:textSize="11sp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:layout_alignStart="@+id/montly_bag_image"
            android:layout_alignEnd="@+id/montly_bag_image"
            android:text="December 2016"
            android:background="@color/colorPrimaryLight"
            android:layout_below="@+id/montly_bag_image"/>
        <TextView
            android:id="@+id/monthly_price"
            android:layout_width="wrap_content"
            android:textSize="11sp"
            android:layout_height="25dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            android:layout_alignEnd="@+id/montly_bag_image"
            android:text="$2"
            android:layout_below="@+id/montly_bag_image"/>
    </RelativeLayout>
    <!-- SUBSCRIPTIONS -->
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:id="@+id/subscribe_container"
        android:padding="20dp"
        android:layout_alignStart="@+id/bundles_container"
        android:layout_toStartOf="@+id/statement_split_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monthly_container">

        <ImageView
            android:id="@+id/subscribe_image"
            android:layout_width="140dp"

            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/fan_special_2"/>
        <TextView
            android:id="@+id/subscribe_monthly_image_caption"
            android:layout_width="wrap_content"
            android:textSize="11sp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:layout_alignStart="@+id/subscribe_image"
            android:layout_alignEnd="@+id/subscribe_image"
            android:text="Monthly"
            android:background="@color/colorAccent"
            android:layout_below="@+id/subscribe_image"/>
        <TextView
            android:id="@+id/subscribe_monthly_price"
            android:layout_width="wrap_content"
            android:textSize="11sp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            android:layout_alignEnd="@+id/subscribe_image"
            android:text="$3"
            android:layout_below="@+id/subscribe_image"/>




    </RelativeLayout>

    <!-- STATEMENTS -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/stats_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_buttons_container"
        android:layout_below="@+id/ssk_bundles_split_line"
        android:layout_alignEnd="@+id/bundles_container"
        android:layout_margin="20dp"
        android:layout_toEndOf="@+id/statement_split_line"
        />

    <!-- SPLITTERS -->
    <View
        android:id="@+id/top_split_line"
        android:layout_alignStart="@+id/bundles_container"
        android:layout_alignEnd="@+id/bundles_container"    android:layout_width="match_parent"
        android:layout_below="@+id/top_buttons_container"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <View
        android:id="@+id/center_offset_splitter"
        android:layout_width="0dp"
        android:layout_marginStart="-100dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <View
        android:id="@+id/coin_indicator_split_line"
        android:layout_alignStart="@+id/bundles_container"
        android:layout_alignEnd="@+id/bundles_container"   android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/coin_indicator_container"
        android:background="@android:color/black" />

    <View
        android:id="@+id/ssk_bundles_split_line"
        android:layout_alignStart="@+id/bundles_container"
        android:layout_alignEnd="@+id/bundles_container"   android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/bundles_container"
        android:background="@android:color/black" />

    <View
        android:id="@+id/monthly_split_line"
        android:layout_toStartOf="@+id/statement_split_line"
        android:layout_alignStart="@+id/bundles_container"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/monthly_container"
        android:background="@android:color/black" />

    <View
        android:id="@+id/statement_split_line"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/center_offset_splitter"
        android:layout_alignTop="@+id/ssk_bundles_split_line"
        android:layout_alignBottom="@+id/subscribe_container"
        android:background="@android:color/black" />

    <!-- BOTTOM BUTTONS CONTAINER -->
    <RelativeLayout
        android:id="@+id/bottom_buttons_container"
        android:layout_width="wrap_content"
        android:layout_alignStart="@+id/bundles_container"
        android:layout_alignEnd="@+id/bundles_container" android:layout_height="60dp"
        android:layout_below="@+id/subscribe_container"
        android:background="@drawable/popup_bottom_background">

        <View
            android:id="@+id/bottom_split_line"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/black" />

        <ImageButton
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/popup_confirmation_button" />

        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/popup_settings_button" />
    </RelativeLayout>
</RelativeLayout>
