<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/row_rumors_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingStart="4dp"
        android:paddingEnd="@dimen/padding_8"
        android:paddingTop="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLines="1"
        android:text="time"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/row_rumors_description_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/row_rumors_time"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLines="1"
        android:maxEms="8"
        android:textColor="@color/colorPrimaryLight"/>

    <TextView
        android:id="@+id/row_rumors_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingStart="@dimen/padding_8"
        android:paddingEnd="4dp"
        android:paddingTop="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_toStartOf="@id/row_rumors_description_info"
        android:textColor="@color/white"/>

</RelativeLayout>