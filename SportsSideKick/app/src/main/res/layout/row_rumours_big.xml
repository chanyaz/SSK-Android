<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/fragment_rumors_single_rumour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <com.github.rongi.rotate_layout.layout.RotateLayout
            android:id="@+id/fragment_rumors_single_rumour_headline_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/fragment_rumors_single_rumour_info_container"
            android:layout_alignParentTop="true"
            android:background="@drawable/rumour_headerz"
            app:angle="90"> <!-- Specify rotate angle here -->

            <TextView
                android:id="@+id/fragment_rumors_single_rumour_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_12"
                android:paddingEnd="@dimen/padding_8"
                android:paddingStart="@dimen/padding_8"
                android:paddingTop="@dimen/padding_8"
                android:text="@string/rumour"
                android:textColor="@color/colorPrimary" />
        </com.github.rongi.rotate_layout.layout.RotateLayout>

        <RelativeLayout
            android:id="@+id/fragment_rumors_single_rumour_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/fragment_rumors_single_rumour_headline_container">

            <TextView
                android:id="@+id/fragment_rumors_single_rumour_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:isScrollContainer="false"
                android:maxLines="3"
                android:minLines="3"
                android:padding="@dimen/padding_8"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/fragment_rumors_single_rumour_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/fragment_rumors_single_rumour_info"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/padding_8"
                android:singleLine="true"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>