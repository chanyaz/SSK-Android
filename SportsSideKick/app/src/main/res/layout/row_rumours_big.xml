<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding_8"
    android:layout_marginEnd="@dimen/padding_8">

    <RelativeLayout
        android:id="@+id/fragment_rumors_single_rumour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?wallItemRumoursBigBackground"
        android:layout_marginBottom="@dimen/margin_16">

        <com.github.rongi.rotate_layout.layout.RotateLayout
            android:id="@+id/fragment_rumors_single_rumour_headline_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/fragment_rumors_single_rumour_info_container"
            android:layout_alignParentTop="true"
            android:background="@drawable/rumour_headers"
            app:angle="90">

            <TextView
                android:id="@+id/fragment_rumors_single_rumour_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/font_size_11"
                android:paddingBottom="@dimen/padding_12"
                android:paddingEnd="@dimen/padding_8"
                android:paddingStart="@dimen/padding_8"
                android:paddingTop="@dimen/padding_8"
                android:text="@string/rumour"
                android:textColor="?wallItemTipTextCaptionColor" />
        </com.github.rongi.rotate_layout.layout.RotateLayout>

        <RelativeLayout
            android:id="@+id/fragment_rumors_single_rumour_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/fragment_rumors_single_rumour_headline_container">

            <TextView
                android:id="@+id/fragment_rumors_single_rumour_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:isScrollContainer="false"
                android:textSize="@dimen/font_size_11"
                android:maxLines="2"
                android:minLines="2"
                android:padding="@dimen/padding_8"
                android:textColor="?wallItemTipTextContentColor" />

            <TextView
                android:id="@+id/fragment_rumors_single_rumour_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/font_size_11"
                android:layout_below="@id/fragment_rumors_single_rumour_info"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/padding_8"
                android:textColor="?rumoursTimeTextColor" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>