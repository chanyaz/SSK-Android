<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/row_wall_shop_image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/row_wall_shop_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wall_shop_demo_photo" />

        <ImageView
            android:id="@+id/row_wall_shop_triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_wall_shop_triangle" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/row_wall_shop_item_name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_wall_shop_image_container"
        android:background="@color/wall_shop_description_background"
        android:padding="8dp">

        <TextView
            android:id="@+id/row_wall_shop_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Camisola Principa"
            android:textColor="@color/wall_shop_description_text_color" />

        <View
            android:id="@+id/row_wall_shop_name_price_divider"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/row_wall_shop_item_name"
            android:layout_alignTop="@id/row_wall_shop_item_name"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_toEndOf="@id/row_wall_shop_item_name"
            android:background="@color/wall_shop_description_text_color" />

        <TextView
            android:id="@+id/row_wall_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/row_wall_shop_name_price_divider"
            android:maxLines="1"
            android:singleLine="true"
            android:text="&#8364;79.99"
            android:textColor="@color/wall_shop_description_text_color" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_wall_shop_item_name_container"
        android:background="@color/wall_shop_description_background">

        <Button
            android:id="@+id/row_wall_shop_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_wall_open_shop"
            android:text="Shop"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/row_wall_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/row_wall_shop_open"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/padding_8"
            android:singleLine="true"
            android:text="Bill Smith"
            android:textColor="@color/lightGrey" />
    </RelativeLayout>
</RelativeLayout>