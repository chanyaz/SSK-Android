<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <View
        android:id="@+id/row_wall_small_cell_comment_tag_color"
        android:layout_width="@dimen/width_5"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@drawable/small_cell_comment_left_line"
        android:layout_alignBottom="@+id/row_wall_small_cell_comment_content_container"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/row_wall_small_cell_comment_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/row_wall_small_cell_comment_tag_color">

        <TextView
            android:id="@+id/row_wall_small_cell_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:isScrollContainer="false"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="3"
            android:minLines="1"
            android:paddingTop="@dimen/padding_16"
            android:paddingStart="@dimen/padding_16"
            android:paddingEnd="@dimen/padding_16"
            android:layout_marginBottom="@dimen/margin_8"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/row_wall_small_cell_comment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_16"
            android:paddingStart="@dimen/padding_16"
            android:paddingEnd="@dimen/padding_16"
            android:textColor="@color/lightGrey"/>
    </LinearLayout>
</RelativeLayout>