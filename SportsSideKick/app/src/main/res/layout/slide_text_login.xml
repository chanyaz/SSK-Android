<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/login_slide_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_slider_text_1"
            android:textColor="@android:color/white"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/login_slide_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_slider_text_2"
            android:textColor="@android:color/white"
            android:textSize="48sp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/login_circle_one"
            android:layout_width="@dimen/login_circle"
            android:layout_height="@dimen/login_circle"
            android:layout_margin="5dp"
            android:background="@drawable/circle_green" />

        <View
            android:id="@+id/login_circle_two"
            android:layout_width="@dimen/login_circle"
            android:layout_height="@dimen/login_circle"
            android:layout_margin="5dp"
            android:background="@drawable/circle_green" />

    </LinearLayout>

</LinearLayout>