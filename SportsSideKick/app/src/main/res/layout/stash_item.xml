<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">
<ImageView

    android:id="@+id/background"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_centerHorizontal="true"
    android:src="@drawable/acheivement_backing_circle"/>
    <ImageView
        android:id="@+id/icon"
        android:layout_centerHorizontal="true"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/soccer_boot"/>
    <TextView
        android:id="@+id/award_name"
        android:layout_width="match_parent"
        android:textSize="12sp"
        android:gravity="center_horizontal"
        android:lines="1"
        android:layout_below="@+id/background"
        android:layout_height="wrap_content"
        android:text="SOCCER BOOT"
        android:textColor="@color/colorAccent"/>
    <TextView
        android:id="@+id/profile_frame"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_below="@+id/award_name"
        android:textSize="11sp"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:text="Profile frame"
        android:lines="1"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/received_from"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_below="@+id/profile_frame"
        android:layout_height="wrap_content"
        android:text="Received 19.01.2017 from Gym Bag"
        android:textSize="10sp"
        android:lines="2"
        android:textColor="@color/white_semitransparent"/>
</RelativeLayout>