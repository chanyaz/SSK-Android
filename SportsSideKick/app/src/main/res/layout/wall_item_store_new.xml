<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/row_wall_small_cell_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <com.github.rongi.rotate_layout.layout.RotateLayout
            android:id="@+id/row_wall_small_cell_headline_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/spaner"
            android:layout_alignParentTop="true"
            android:background="@drawable/rumour_headerz"
            android:backgroundTint="@color/wall_store_color"
            app:angle="90"> <!-- Specify rotate angle here -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_12"
                android:paddingEnd="@dimen/padding_8"
                android:paddingStart="@dimen/padding_8"
                android:paddingTop="@dimen/padding_8"
                android:text="@string/store_big"
                android:textColor="@color/white" />
        </com.github.rongi.rotate_layout.layout.RotateLayout>

        <TextView
            android:id="@+id/spaner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:lineSpacingMultiplier="1.2"
            android:minLines="3"
            android:padding="@dimen/padding_16"
            android:textSize="@dimen/font_size_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/row_wall_small_cell_headline_container"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="3"
            android:padding="@dimen/padding_16"
            android:text="Store text"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>