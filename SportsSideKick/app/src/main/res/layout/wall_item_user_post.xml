<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/wall_demo_photo" />

        <ImageView
            android:id="@+id/play_button"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_post_play" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_container"
        android:background="@color/green_dark_2">

        <View
            android:id="@+id/marker"
            android:layout_width="@dimen/margin_8"
            android:layout_alignTop="@+id/caption"
            android:layout_alignBottom="@+id/description"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:minLines="2"
            android:layout_toEndOf="@+id/marker"
            android:padding="@dimen/padding_8"
            android:ellipsize="end"
            android:textSize="16sp"
            android:text="A falsis, silva noster competition.Turpis albus accola est.Est domesticustition.Turpis albus accola est.Est domesticustition.Turpis albus accola est.Est domesticus historia, cesaris.Parma, stella, et valebat."
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_toEndOf="@+id/marker"
            android:layout_height="wrap_content"
            android:layout_below="@id/caption"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/row_wall_post_likes_container"
            android:maxLines="2"
            android:paddingBottom="@dimen/padding_8"
            android:paddingEnd="@dimen/padding_8"
            android:paddingStart="@dimen/padding_8"
            android:scrollHorizontally="true"
            android:text="Christopher Ogden"
            android:textColor="@color/white_semitransparent" />
    </RelativeLayout>

</RelativeLayout>