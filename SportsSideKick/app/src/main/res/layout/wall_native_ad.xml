<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_230"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical">

    <com.facebook.ads.MediaView
        android:id="@+id/wall_native_ad_media_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_130"
        android:gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wall_native_ad_media_view"
        android:background="?nativeAdBackground"
        android:clickable="true">

        <TextView
            android:id="@+id/wall_native_ad_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8"
            android:lines="2"
            android:minLines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:clickable="true"/>

        <TextView
            android:id="@+id/wall_native_ad_social_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@+id/wall_native_ad_body"
            android:textColor="@color/black"
            android:clickable="true"/>

    </RelativeLayout>

</RelativeLayout>