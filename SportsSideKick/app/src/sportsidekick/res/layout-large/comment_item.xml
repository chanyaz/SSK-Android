<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/width_60"
        android:layout_height="@dimen/height_60"
        android:layout_gravity="top"
        android:layout_marginEnd="@dimen/margin_5"
        android:layout_marginStart="@dimen/margin_15"
        android:src="?profileImageIcon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_5"
            android:background="?chatBubbleIcon"
            android:minLines="1"
            android:text="@string/comment_text"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/message_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_text"
            android:text="DEMO TEXT DEMO TEXT DEMO TEXT DEMO TEXT"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginStart="@dimen/margin_10"
            android:textSize="@dimen/font_size_10"
            android:layout_marginTop="@dimen/margin_5"
            android:textColor="?lightGrey" />

        <TextView
            android:id="@+id/translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_text"
            android:paddingEnd="@dimen/padding_16"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_toEndOf="@+id/message_information"
            android:text="Translate"
            android:textColor="?lightGrey"
            android:textSize="@dimen/font_size_10"
            />

    </RelativeLayout>
</LinearLayout>