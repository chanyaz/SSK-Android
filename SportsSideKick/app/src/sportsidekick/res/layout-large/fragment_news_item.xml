<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/share_news_to_wall_button"
        android:layout_width="@dimen/standard_button_height"
        android:layout_height="@dimen/standard_button_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/share_to_wall"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/post_container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <RelativeLayout
                    android:id="@+id/media_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:id="@+id/content_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY" />

                    <VideoView
                        android:id="@+id/content_video"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_500"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/strap_and_title_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="?postCommentContainerColor">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_22"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/strap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_10"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="?lightGrey"
                        android:textSize="@dimen/font_size_16" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/top_buttons_contaniner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_container"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/likes_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_8"
                    android:layout_weight="1"
                    android:gravity="center">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/likes_icon"
                        android:layout_width="@dimen/width_26"
                        android:layout_height="@dimen/height_26"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:background="@drawable/ic_like"
                        app:backgroundTint="?newsLikeIcon" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/likes_icon_liked"
                        android:layout_width="@dimen/width_26"
                        android:layout_height="@dimen/height_26"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:background="@drawable/ic_like"
                        app:backgroundTint="?newsLikedIcon"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/likes_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pin_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_8"
                    android:layout_weight="1"
                    android:gravity="center">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/pin_icon"
                        android:layout_width="@dimen/width_26"
                        android:layout_height="@dimen/height_26"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:background="@drawable/ic_pin"
                        app:backgroundTint="?newsPinIcon" />


                    <TextView
                        android:id="@+id/pin_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/share_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_8"
                    android:layout_weight="1"
                    android:gravity="center">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/share_icon"
                        android:layout_width="@dimen/width_26"
                        android:layout_height="@dimen/height_26"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:background="@drawable/ic_share"
                        app:backgroundTint="?newsShareIcon" />


                    <TextView
                        android:id="@+id/share_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comments_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_8"
                    android:layout_weight="1"
                    android:gravity="center">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/comments_icon"
                        android:layout_width="@dimen/width_26"
                        android:layout_height="@dimen/height_26"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:background="@drawable/ic_comment"
                        app:backgroundTint="?newsCommentIcon" />


                    <TextView
                        android:id="@+id/comments_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/top_horizontal_split_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"
                android:layout_below="@id/top_buttons_contaniner"
                android:background="?green_dark_2" />

            <TextView
                android:id="@+id/content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_horizontal_split_line"
                android:layout_margin="@dimen/margin_20"
                android:textColor="?wallItemTipTextContentColor" />

            <View
                android:id="@+id/bottom_horizontal_split_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/content_text"
                android:background="?green_dark_2" />

            <LinearLayout
                android:id="@+id/tutorial_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bottom_horizontal_split_line"
                android:layout_marginBottom="@dimen/margin_negative_20"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tutorial_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="?colorAccent"
                    android:textSize="@dimen/font_size_18" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_1"
                    android:background="?green_dark_2" />

                <TextView
                    android:id="@+id/tutorial_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_15"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/comments_wall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tutorial_container"
                android:layout_marginTop="@dimen/margin_20" />

            <LinearLayout
                android:id="@+id/tutorial_container_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/comments_wall"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/margin_20">

                <TextView
                    android:id="@+id/tutorial_bottom_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_15"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <RelativeLayout
                    android:id="@+id/tutorial_earn_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/width_160"
                        android:layout_height="@dimen/height_90"
                        android:layout_below="@+id/coin_image"
                        android:layout_marginTop="@dimen/margin_negative_10"
                        android:background="?green_dark_2_semitransparent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/margin_10"
                            android:text="@string/tutorial_earn"
                            android:textAlignment="center"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/coin_image"
                        android:layout_width="@dimen/width_50"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/margin_10"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tutorial_coins" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/share_buttons_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:animateLayoutChanges="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_35"
                android:layout_below="@+id/header_container"
                android:background="@drawable/share_bubble"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/share_facebook"
                    android:layout_alignParentStart="true"
                    android:layout_width="@dimen/width_35"
                    android:layout_height="@dimen/height_35"
                    android:layout_marginStart="@dimen/margin_30"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_30"
                    android:src="@drawable/ic_share_facebook" />

                <ImageView
                    android:id="@+id/share_twitter"
                    android:layout_toEndOf="@+id/share_facebook"
                    android:layout_width="@dimen/width_35"
                    android:layout_height="@dimen/height_35"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:src="@drawable/ic_shate_twitter" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/post_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?postCommentContainerColor">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_toEndOf="@+id/uploaded_image"
            android:layout_toStartOf="@+id/post_post_button"
            app:backgroundTint="?postCommentContainerColor"
            android:hint="@string/enter_comment_hint"
            android:textColor="?postCommentTextColor"
            android:textColorHint="?postCommentHintColor" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/post_post_button"
            android:layout_width="@dimen/height_60"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_20"
            android:paddingTop="@dimen/margin_10"
            android:paddingStart="@dimen/margin_20"
            android:adjustViewBounds="true"
            android:src="@drawable/btn_send"
            android:tint="@color/white"
            android:visibility="gone" />

    </RelativeLayout>

    <Button
        android:id="@+id/close_news_button"
        android:layout_width="@dimen/standard_button_height"
        android:layout_height="@dimen/standard_button_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/close_button" />

</RelativeLayout>