<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?wallBackground"
    tools:context="base.app.fragment.instance.WallFragment">


    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/prodgres_bar"
        android:layout_height="@dimen/prodgres_bar"
        android:layout_centerInParent="true"
        android:elevation="@dimen/elevation_2"
        app:indicatorName="LineSpinFadeLoaderIndicator" />

    <com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srl_direction="bottom"
        android:layout_above="@+id/fragment_wall_bottom_bar">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_wall_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout>


    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:background="?wallEditTextContainerBackground"
        android:layout_above="@+id/fragment_wall_bottom_bar"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/your_post_container"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="@dimen/height_60"
            android:visibility="gone"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/vertical_separator" >
                <ImageView
                    android:id="@+id/uploaded_image"
                    android:layout_width="@dimen/width_50"
                    android:layout_height="@dimen/height_50"
                    android:visibility="gone"
                    android:scaleType="centerCrop"
                    android:layout_centerVertical="true"
                    android:src="@color/black"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_alignParentStart="true"/>
                <ImageView
                    android:id="@+id/remove_uploaded_photo_button"
                    android:layout_width="@dimen/width_20"
                    android:layout_height="@dimen/height_20"
                    android:visibility="gone"
                    android:layout_alignTop="@+id/uploaded_image"
                    android:src="@drawable/removephotobutton"
                    android:layout_alignEnd="@+id/uploaded_image"/>
                <EditText
                    android:id="@+id/post_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/margin_10"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="@string/write_post_hint"
                    android:layout_toEndOf="@+id/uploaded_image"
                    android:layout_toStartOf="@+id/post_post_button"
                    android:textColor="?wallEditSearchText"
                    android:textColorHint="?wallEditSearchHint" />
                <ImageView
                    android:id="@+id/post_post_button"
                    android:layout_width="@dimen/width_60"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:src="@drawable/btn_send"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:tint="?colorPrimarySemiLight"
                    android:layout_alignParentEnd="true"
                    android:visibility="visible"/>
            </RelativeLayout>
            <View
                android:id="@+id/vertical_separator"
                android:layout_width="@dimen/width_2"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/media_buttons"
                android:background="?light_green_1_semitransparent" />
            <LinearLayout
                android:id="@+id/media_buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/camera_button"
                    android:layout_width="@dimen/width_40"
                    android:layout_height="match_parent"
                    android:src="?chatCameraIcon"
                    android:tint="?colorPrimarySemiLight" />
                <ImageView
                    android:id="@+id/image_button"
                    android:layout_width="@dimen/width_40"
                    android:layout_height="match_parent"
                    android:src="?chatGalleryIcon"
                    android:tint="?colorPrimarySemiLight" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wall_filter_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_60"
            android:clickable="true"
            android:layout_alignParentStart="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <ToggleButton
                    android:id="@+id/news_filter_toggle"
                    style="@style/toggle_button_filter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wall_button_size"
                    android:textOff="@string/news_caption"
                    android:textOn="@string/news_caption" />
                <ToggleButton
                    android:id="@+id/user_filter_toggle"
                    style="@style/toggle_button_filter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wall_button_size"
                    android:textOff="@string/user"
                    android:textOn="@string/user" />
                <ToggleButton
                    android:id="@+id/stats_filter_toggle"
                    style="@style/toggle_button_filter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wall_button_size"
                    android:textOff="@string/stats"
                    android:textOn="@string/stats" />
                <ToggleButton
                    android:id="@+id/rumours_filter_toggle"
                    style="@style/toggle_button_filter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wall_button_size"
                    android:textOff="@string/rumors_fragment_caption"
                    android:textOn="@string/rumors_fragment_caption" />
                <ToggleButton
                    android:id="@+id/store_filter_toggle"
                    style="@style/toggle_button_filter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wall_button_size"
                    android:textOff="@string/store"
                    android:textOn="@string/store" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/search_wall_post"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_60"
            android:clickable="true"
            android:layout_alignParentStart="true"
            android:visibility="gone">

            <EditText
                android:id="@+id/search_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_10"
                android:backgroundTint="@color/colorPrimary"
                android:hint="@string/search_wall_posts_hint"
                android:textColor="?wallEditSearchText"
                android:textColorHint="?wallEditSearchHint" />
        </RelativeLayout>
    </RelativeLayout>



    <View
        android:id="@+id/shadow"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_3dp"
        android:layout_above="@+id/fragment_wall_bottom_bar"
        android:background="@drawable/top_gradient_drawable">
    </View>

    <RelativeLayout
        android:id="@+id/fragment_wall_bottom_bar"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_60"
        android:background="?wallMenuBackground"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <Button
            android:id="@+id/fragment_wall_new_post"
            android:layout_width="@dimen/wall_button_size"
            android:layout_height="@dimen/wall_button_size"
            android:layout_marginEnd="@dimen/padding_8"
            android:layout_marginStart="@dimen/padding_16"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_toStartOf="@+id/fragment_wall_filter"
            android:background="@drawable/wall_new_post_selector" />
        <Button
            android:id="@+id/fragment_wall_filter"
            android:layout_width="@dimen/wall_button_size"
            android:layout_height="@dimen/wall_button_size"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_centerHorizontal="true"
            android:background="@drawable/wall_filter_selector" />
        <Button
            android:id="@+id/fragment_wall_search"
            android:layout_width="@dimen/wall_button_size"
            android:layout_height="@dimen/wall_button_size"
            android:layout_marginEnd="@dimen/padding_16"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginStart="@dimen/padding_8"
            android:layout_toEndOf="@id/fragment_wall_filter"
            android:background="@drawable/wall_search_selector" />

    </RelativeLayout>
</RelativeLayout>
