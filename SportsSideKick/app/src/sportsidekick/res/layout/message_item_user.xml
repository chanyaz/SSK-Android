<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_5"
    android:layout_marginStart="@dimen/margin_15">


    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_5"
        android:background="?chatBubbleRightImage">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/demo_content"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_11" />

        <ImageView
            android:id="@+id/content_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/height_80"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/height_80"
            android:scaleType="centerInside"
            android:src="@drawable/play_button_icon" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/progress_bar"
            android:layout_width="@dimen/progress_bar_width"
            android:layout_height="@dimen/progress_bar_height"
            android:layout_margin="@dimen/margin_10"
            android:layout_centerInParent="true"
            android:elevation="@dimen/elevation_2"
            android:visibility="gone"
            app:indicatorName="LineSpinFadeLoaderIndicator" />
    </RelativeLayout>

   <!-- Sender info -->
    <TextView
        android:id="@+id/sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_container"
        android:layout_toStartOf="@+id/spliter"
        android:alpha="0.5"
        android:text="@string/you"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_10" />

    <TextView
        android:id="@+id/spliter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_container"
        android:layout_toStartOf="@+id/timestamp"
        android:alpha="0.5"
        android:text=" | "
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_10" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/content_container"
        android:layout_marginEnd="@dimen/margin_15"
        android:alpha="0.5"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_10" />
</RelativeLayout>