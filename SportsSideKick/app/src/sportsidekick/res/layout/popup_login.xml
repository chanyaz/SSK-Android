<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/width_500"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_base_size_60">

    <!-- VIEW IN MIDDLE TO SPLIT EASIER -->
    <View
        android:id="@+id/center_split"
        android:layout_width="@dimen/width_1"
        android:layout_height="@dimen/height_1"
        android:layout_centerHorizontal="true" />


    <!-- TOP BUTTONS CONTAINER -->
    <LinearLayout
        android:id="@+id/top_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_button"
            android:layout_width="@dimen/space_0"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_1"
            android:layout_weight="1"
            android:background="?colorPrimarySemiLight"
            android:gravity="center"
            android:text="@string/login_login"
            android:textColor="?colorAccent" />

        <TextView
            android:id="@+id/sign_up_button"
            android:layout_width="@dimen/space_0"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_1"
            android:layout_weight="1"
            android:background="?colorAccentLight"
            android:gravity="center"
            android:text="@string/login_sign_up"
            android:textColor="?white_semitransparent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2"
            android:layout_marginEnd="@dimen/margin_1"
            android:layout_weight="1"
            android:background="?colorAccent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2"
            android:layout_weight="1"
            android:background="?colorPrimaryLight" />
    </LinearLayout>

    <!--  TOP SPLITTER-->
    <View
        android:id="@+id/top_split_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:layout_below="@+id/top_buttons_container"
        android:background="@android:color/black" />

    <!-- CONTENT CONTAINER -->


    <!-- BOTTOM BUTTONS CONTAINER -->
    <RelativeLayout
        android:id="@+id/bottom_buttons_container_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height"
        android:layout_alignParentStart="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/container"
        android:background="@drawable/popup_login_button_background"
        android:clickable="true">

        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/login_login"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_size_18" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/login_progress_bar"
            android:layout_width="@dimen/prodgres_bar"
            android:layout_height="@dimen/prodgres_bar"
            android:layout_centerInParent="true"
            android:elevation="@dimen/elevation_2"
            android:visibility="gone"
            app:indicatorName="LineSpinFadeLoaderIndicator" />

    </RelativeLayout>

    <!-- BOTTOM BUTTONS CONTAINER -->
    <RelativeLayout
        android:id="@+id/bottom_buttons_container_reset"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_button_height"
        android:layout_alignParentStart="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/container"
        android:background="@drawable/popup_login_button_background"
        android:clickable="true"
        android:visibility="invisible">

        <TextView
            android:id="@+id/reset_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Reset"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_size_18"
            android:visibility="visible" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/reset_progress_bar"
            android:layout_width="@dimen/prodgres_bar"
            android:layout_height="@dimen/prodgres_bar"
            android:layout_centerInParent="true"
            android:elevation="@dimen/elevation_2"
            android:visibility="gone"
            app:indicatorName="LineSpinFadeLoaderIndicator" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_split_line"
        android:background="?colorPrimarySemiLight">


        <!--Login username and password container-->
        <RelativeLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:animateLayoutChanges="true"
            android:background="?colorPrimarySemiLight"
            android:clickable="true">

            <LinearLayout
                android:layout_width="@dimen/login_conteiner_width"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin_40"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/login_email"
                    style="@style/edit_text_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/login_login_email"
                    android:inputType="textEmailAddress"
                    android:nextFocusDown="@+id/login_password"
                    android:textAlignment="textStart" />

                <EditText
                    android:id="@+id/login_password"
                    style="@style/edit_text_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/login_login_password"
                    android:inputType="textPassword"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/forgot_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/login_login_forgot_text"
                    android:textColor="?colorPrimaryLight" />

            </LinearLayout>

        </RelativeLayout>

        <!--Forgot password container-->
        <RelativeLayout
            android:id="@+id/forgot_password_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/content_container"
            android:layout_alignParentTop="true"
            android:animateLayoutChanges="true"
            android:background="?colorPrimarySemiLight"
            android:clickable="true"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/forgot_password_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10"
                android:src="@drawable/ic_arrow_back" />

            <RelativeLayout
                android:layout_width="@dimen/login_conteiner_width"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin_40"
                android:clickable="true"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/login_forgot_pass_email"
                    style="@style/edit_text_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/login_login_email"
                    android:inputType="textEmailAddress"
                    android:text="user2@user2.com" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
