<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="?green_dark_1"
    android:layout_height="@dimen/height_60"
  >

    <RelativeLayout
        android:id="@+id/image_holder"
        android:layout_width="@dimen/height_35"
        android:layout_height="@dimen/height_35"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_14">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="?profileImageIcon" />

        <ImageView
            android:id="@+id/online_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:visibility="invisible"
            android:tint="?light_green_1"
            android:src="@drawable/online_status" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/button_add_friend"
        android:layout_toEndOf="@+id/image_holder">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_11"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mutual_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_name"
            android:layout_toEndOf="@+id/number_mutual_friends"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:paddingStart="@dimen/padding_4"
            android:text="@string/mutual_friends"
            android:textColor="?light_green_1"
            android:textSize="@dimen/font_size_11" />
        <TextView
            android:layout_toEndOf="@+id/friend_icon"
            android:id="@+id/number_mutual_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="4"
            android:paddingStart="@dimen/padding_4"
            android:maxLines="1"
            android:layout_below="@+id/profile_name"
            android:textColor="?light_green_1"
            android:textSize="@dimen/font_size_11"
            />

        <ImageView
            android:id="@+id/friend_icon"
            android:layout_width="@dimen/height_15"
            android:layout_height="@dimen/height_15"
            android:layout_below="@+id/profile_name"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/icon_green_group_friends" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/button_add_friend"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:scaleType="centerInside"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        app:srcCompat="@drawable/add_friends_selector" />
    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/height_1"
        android:background="@color/black"
        />


</RelativeLayout>