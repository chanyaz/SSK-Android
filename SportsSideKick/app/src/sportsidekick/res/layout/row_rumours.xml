<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/row_rumors_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="?rumourSmallContentColor"
        android:textSize="@dimen/font_size_11"
        android:paddingStart="@dimen/padding_8"
        android:paddingEnd="@dimen/padding_8"
        android:paddingTop="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_2"/>

    <TextView
        android:id="@+id/row_rumors_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_rumors_description"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?lightGrey"
        android:textSize="@dimen/font_size_11"
        android:paddingStart="@dimen/padding_8"
        android:paddingEnd="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8"
        android:paddingTop="@dimen/padding_2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="?rumourSmallSeparatorColor"
        android:layout_below="@+id/row_rumors_time"/>

</RelativeLayout>

