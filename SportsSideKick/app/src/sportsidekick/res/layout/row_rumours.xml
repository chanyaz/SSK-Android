<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/row_rumours_background_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/row_rumours_foreground_container"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/row_rumours_foreground_container"
        android:background="@color/colorAccent">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/row_rumours_swipe_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:padding="@dimen/padding_16"
            android:src="@drawable/ic_share"
            android:tint="@color/colorPrimary" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/row_rumours_foreground_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_phone"
        android:focusable="true"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/row_rumors_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="@dimen/padding_2"
            android:paddingEnd="@dimen/padding_8"
            android:paddingStart="@dimen/padding_8"
            android:paddingTop="@dimen/padding_8"
            android:textColor="?rumourSmallContentColor"
            android:textSize="@dimen/font_size_11" />

        <TextView
            android:id="@+id/row_rumors_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_rumors_description"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/padding_8"
            android:paddingEnd="@dimen/padding_8"
            android:paddingStart="@dimen/padding_8"
            android:paddingTop="@dimen/padding_2"
            android:textColor="?lightGrey"
            android:textSize="@dimen/font_size_11" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_below="@+id/row_rumours_foreground_container"
        android:background="?rumourSmallSeparatorColor" />
</RelativeLayout>

