<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/image"
        android:scaleType="centerCrop"
        app:layout_aspectRatio="178%"
        app:layout_widthPercent="100%" />

    <ImageView
        android:id="@+id/play_button"
        android:layout_width="@dimen/width_48"
        android:layout_alignBottom="@+id/image"
        android:layout_alignTop="@+id/image"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_post_play" />

    <TextView
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:background="?channelItemBackground"
        android:bufferType="spannable"
        android:lines="2"
        android:padding="@dimen/padding_8"
        android:text="@string/caption"
        android:textColor="?channelItemCaption"
        android:textSize="@dimen/font_size_11" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caption"
        android:background="?channelItemBackground"
        android:bufferType="spannable"
        android:lines="1"
        android:paddingBottom="@dimen/padding_8"
        android:paddingEnd="@dimen/space_0"
        android:paddingStart="@dimen/padding_8"
        android:paddingTop="@dimen/space_0"
        android:text="05 Sep 2016"
        android:textColor="?channelItemDate"
        android:textSize="@dimen/font_size_10" />

</android.support.percent.PercentRelativeLayout>