<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_230">

    <RelativeLayout
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_130"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/news_holder_image" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_container"
        android:background="@color/white">

        <TextView
            android:id="@+id/caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:minLines="2"
            android:padding="@dimen/padding_5"
            android:textColor="?colorPrimaryLight"
            android:textSize="@dimen/font_size_16"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/user_details"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10">

            <LinearLayout
                android:id="@+id/comments_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:gravity="center">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/comments_icon"
                    android:layout_width="@dimen/width_15"
                    android:layout_height="@dimen/width_15"
                    android:background="@drawable/ic_comment"
                    android:layout_marginEnd="@dimen/margin_2" />

                <TextView
                    android:id="@+id/comments_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/likes_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/padding_8"
                android:layout_toStartOf="@id/comments_container"
                android:gravity="center">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/likes_icon"
                    android:layout_width="@dimen/width_15"
                    android:layout_height="@dimen/height_15"
                    android:layout_marginEnd="@dimen/margin_2"
                    android:background="@drawable/ic_like" />

                <TextView
                    android:id="@+id/likes_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_10" />
            </LinearLayout>

            <TextView
                android:id="@+id/author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/likes_container"
                android:maxLines="1"
                android:textSize="@dimen/font_size_10"
                android:textColor="?lightGrey"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>